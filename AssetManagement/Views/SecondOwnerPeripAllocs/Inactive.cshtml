@model IEnumerable<AssetManagement.Models.SecondOwnerPeripAlloc>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Chivo:wght@300;400;500;700&display=swap" />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18"></script>
<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }

    .custom-fontsize {
        font-size: 10px;
    }


    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
        overflow: hidden;
    }

    /* Add this CSS to adjust the top margin of the layout container */
    .container {
        margin-top: 70px; /* Adjust this value according to your navbar height */
    }

    td {
        cursor: pointer;
    }

</style>
<h4>Deleted Items</h4>

@if (TempData["Welcome"] != null)
{
    <div class="toast-notification animated-toast">
        <p>@TempData["Welcome"]</p>
    </div>
}
<p>
    <a class="btn btn-sm bg-secondary h5 text-white text-decoration-none p-2 btn createbtn" asp-action="Index">Back</a>
</p>
<input type="text" id="filterInput" placeholder="Search...">
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>
                    @Html.DisplayNameFor(model => model.Owner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LaptopPeripheral)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatePurchased)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AgeYears)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateUpdated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdatedBy)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                        @Html.DisplayFor(modelItem => item.LaptopPeripAlloc.PeripheralAllocationId)
                    </td>
                    <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                        @Html.DisplayFor(modelItem => item.Owner.OwnerFullName)
                    </td>
                    <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                        @Html.DisplayFor(modelItem => item.LaptopPeripheral.PeripheralDescription)
                    </td>
                    <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                        @Html.DisplayFor(modelItem => item.DatePurchased)
                    </td>
                    <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                        @Html.DisplayFor(modelItem => item.AgeYears)
                    </td>
                    <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                        @Html.DisplayFor(modelItem => item.DateUpdated)
                    </td>
                    <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                        @Html.DisplayFor(modelItem => item.Status.status_name)
                    </td>
                    <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                        @Html.DisplayFor(modelItem => item.CreatedBy.UserCode)
                    </td>
                    <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                        @Html.DisplayFor(modelItem => item.UpdatedBy.UserCode)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>

    //FILTERING

    $(document).ready(function () {
        $('#filterInput').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('tbody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>
