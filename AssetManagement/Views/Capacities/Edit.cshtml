@model AssetManagement.Models.Capacity

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}
<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }


    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
    }
</style>
</hr>
<div>
    <div>
        <form asp-action="Edit" class="row" id="edit-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CapacityId" />
            <div class="form-group col-6">
                <label asp-for="CapacityDescription" class="control-label"></label>
                <input asp-for="CapacityDescription" class="form-control" />
                <span asp-validation-for="CapacityDescription" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="CapacityStatus" class="control-label"></label>
                <input asp-for="CapacityStatus" class="form-control" />
                <span asp-validation-for="CapacityStatus" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="CapacityCreatedBy" class="control-label"></label>
                <input asp-for="CapacityCreatedBy" class="form-control" />
                <span asp-validation-for="CapacityCreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="CapacityCreatedDate" class="control-label"></label>
                <input asp-for="CapacityCreatedDate" class="form-control" />
                <span asp-validation-for="CapacityCreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="CapacityUpdatedBy" class="control-label"></label>
                <input asp-for="CapacityUpdatedBy" class="form-control" />
                <span asp-validation-for="CapacityUpdatedBy" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="CapacityUpdatedDate" class="control-label"></label>
                <input asp-for="CapacityUpdatedDate" class="form-control" />
                <span asp-validation-for="CapacityUpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-2 col ">
                <a asp-action="Index" class="btn btn-secondary text-start me-2">Back</a>
                <input type="submit" value="Save" class="btn bg-success text-white" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    $(document).ready(function () {
        $(".btn-save").click(function () {

            var formData = $("#edit-form").serialize();
            $.ajax({
                url: "@Url.Action("Edit","Capacities")",
                type: "POST",
                data: { formData: formData },
                success: function (res) {
                    window.location.reload();
                }
            })
        })
    })
</script>
