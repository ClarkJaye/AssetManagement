@model AssetManagement.Models.User

@{
    ViewData["Title"] = "Edit";
}
<style>
      body {
        font-family: 'Poppins', sans-serif;
        overflow: hidden;
    }

    .sign-in {
        background-color: #BF1E25;
        border-color: #BF1E25;
        transition: background-color 0.3s ease;
    }

        .sign-in:hover {
            color: #BF1E25;
            background-color: white;
        }

    .form-control {
        position: relative;
        z-index: 1;
    }

        .form-control input {
            font-size: 16px;
            padding: 12px 12px;
            border: none;
            border-bottom: 1px solid #ccc;
            transition: all 0.3s ease;
        }

            .form-control input:focus {
                outline: none;
                border-bottom: 2px solid #BF1E25;
            }

        .form-control label {
            position: absolute;
            left: 12px;
            top: 16px;
            font-size: 16px;
            color: #777;
            transition: all 0.3s ease;
        }

        .form-control input:focus + label,
        .form-control input:not(:placeholder-shown) + label {
            top: -8px;
            font-size: 12px;
            color: #BF1E25;
        }

        .form-control input:focus + label {
            color: #BF1E25;
        }

        .form-control::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 2px;
            background-color: #BF1E25;
            transform-origin: bottom right;
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .form-control input:focus::after {
            transform-origin: bottom left;
            transform: scaleX(1);
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="text-center">Change Password</h4>
            <hr />

            @{
                var alertMessage = TempData["AlertMessage"] as string;
                var alertMessage1 = TempData["AlertMessage1"] as string;
                var alertMessage2 = TempData["AlertMessage2"] as string;
            }

            @if (!string.IsNullOrEmpty(alertMessage))
            {
                <div class="alert alert-danger" style="background-color: #BF1E25; color:white;">
                    @alertMessage
                </div>
            }
            @if (!string.IsNullOrEmpty(alertMessage1))
            {
                <div class="alert alert-danger" style="background-color: #BF1E25; color:white;">
                    @alertMessage1
                </div>
            }
            @if (!string.IsNullOrEmpty(alertMessage2))
            {
                <div class="alert alert-danger" style="background-color: #BF1E25; color:white;">
                    @alertMessage2
                </div>
            }

            <form id="login-form" asp-action="UserChangePassword" asp-controller="Users" method="post">
                <div class="form-control mb-1 mt-3" hidden>
                    <input required type="text" class="form-control rounded-pill" id="username" value="@ViewBag.UserName" name="username">
                    <label for="username">Username</label>
                </div>
                <div class="form-control mb-1 mt-3">
                    <input required type="password" class="form-control rounded-pill" id="password" name="curpassword">
                    <label for="curpassword">Old Password</label>
                </div>
                <div class="form-control mb-1 mt-3">
                    <input required type="password" class="form-control rounded-pill" id="password" name="newpassword">
                    <label for="newpassword">New Password</label>
                </div>
                <div class="form-control mb-1 mt-3">
                    <input required type="password" class="form-control rounded-pill" id="password" name="conpassword">
                    <label for="conpassword">Confirm Password</label>
                </div>
                <button type="submit" class="sign-in btn btn-primary mt-2 w-100 rounded-pill">Change Password</button>
            </form>

            <div class="mt-3">
                <a class="btn btn-secondary rounded-pill w-100" asp-action="Index" asp-controller="Home">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
