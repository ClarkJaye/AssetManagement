@model AssetManagement.Models.User

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&display=swap">
<!-- SweetAlert CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
@*These links below for jquery and sweetalert*@
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- SweetAlert CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
<!-- SweetAlert JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="~/lib/sweetalert2/dist/sweetalert2.min.css" />
<script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
<style>
    body {
        font-family: 'Poppins', sans-serif;
        overflow: hidden;
    }

    .sign-in {
        background-color: #BF1E25;
        border-color: #BF1E25;
    }

        .sign-in:hover {
            color: #BF1E25;
            background-color: white
        }

    .form-control {
        position: relative;
        z-index: 1;
    }

        .form-control input {
            font-size: 16px;
            padding: 12px 12px;
            border: none;
            border-bottom: 1px solid #ccc;
            transition: all 0.3s ease;
        }

            .form-control input:focus {
                outline: none;
                border-bottom: 2px solid #BF1E25;
            }

        .form-control label {
            position: absolute;
            left: 12px;
            top: 16px;
            font-size: 16px;
            color: #777;
            transition: all 0.3s ease;
        }

        .form-control input:focus + label,
        .form-control input:not(:placeholder-shown) + label {
            top: -8px;
            font-size: 12px;
            color: #BF1E25;
        }

        .form-control input:focus + label {
            color: #BF1E25;
        }

        .form-control::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background-color: #BF1E25;
            transform-origin: bottom right;
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .form-control input:focus::after {
            transform-origin: bottom left;
            transform: scaleX(1);
        }

    .swal-button--confirm {
        background-color: green;
        color: white;
        border: none;
        box-shadow: none;
    }

        .swal-button--confirm:hover {
            background-color: darkgreen;
        }

    .swal2-styled.swal2-confirm {
        background-color: green;
        color: white;
        border: none;
        box-shadow: none;
    }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        $(document).ready(function () {
            Swal.fire({
                icon: 'success',
                title: 'Successful',
                text: 'Successfully Login!',
                customClass: {
                    confirmButton: 'swal-button swal-button--confirm'
                },
                allowOutsideClick: false, // Prevent closing the initial popup by clicking outside
                showCloseButton: true,
                showConfirmButton: true
            }).then(function (result) {
                if (result.isConfirmed) {
                    // User clicked the confirm button in the initial popup
                    Swal.fire({
                        icon: 'info',
                        title: 'Change Password',
                        text: 'You must change your password.',
                        showCancelButton: true,
                        confirmButtonText: 'Change Password',
                        cancelButtonText: 'Later'
                    }).then(function (result) {
                        if (result.isConfirmed) {
                            // Handle the "Change Password" action here
                            // You can redirect to the password change page or show another modal for password change
                            // Example:
                            // window.location.href = '/change-password';
                        } else if (result.dismiss === Swal.DismissReason.cancel) {
                            // User clicked the "Later" button
                            window.location.href = '@Url.Action("Index", "Home")'; // Redirect to Home/Index
                        }
                    });
                }
            });
        });
    </script>
}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="text-center">Change Password</h4>
            <hr />

            @{
                var alertMessage = TempData["AlertMessage"] as string;
                var alertMessage1 = TempData["AlertMessage1"] as string;
            }

            @if (!string.IsNullOrEmpty(alertMessage))
            {
                <div class="alert alert-danger text-white" style="background-color: #BF1E25;">
                    @alertMessage
                </div>
            }
            @if (!string.IsNullOrEmpty(alertMessage1))
            {
                <div class="alert alert-danger text-white" style="background-color: #BF1E25;">
                    @alertMessage1
                </div>
            }

            <form id="login-form" asp-action="ChangePassword" asp-controller="Users" method="post">
                <div class="form-control mb-3" hidden>
                    <input required type="text" id="username" value="@ViewBag.UserName" name="username">
                    <label for="username">Username</label>
                </div>

                <div class="form-control mb-3">
                    <input required type="password" id="newpassword" name="newpassword">
                    <label for="newpassword">New Password</label>
                </div>
                <div class="form-control mb-3">
                    <input required type="password" id="conpassword" name="conpassword">
                    <label for="conpassword">Confirm Password</label>
                </div>
                <button type="submit" class="sign-in btn btn-primary rounded-pill w-100">Change Password</button>
            </form>

            <div class="mt-3">
                <a class="btn btn-secondary rounded-pill w-100" asp-action="Index" asp-controller="Home">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
