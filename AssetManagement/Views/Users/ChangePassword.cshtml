@model AssetManagement.Models.User

@{
    ViewData["Title"] = "Change Password";
}

<style>
    .form-floating {
        position: relative;
        margin-bottom: 1.5rem;
    }

        .form-floating input {
            border-radius: 10px;
            padding: 1rem;
            font-size: 1rem;
        }

        .form-floating label {
            position: absolute;
            top: 1rem;
            left: 1rem;
            padding: 0 .25rem;
            transition: all 0.2s;
            pointer-events: none;
            transform-origin: 0 0;
            font-size: 1rem;
            color: #6c757d;
        }

        .form-floating input:focus + label,
        .form-floating input:not(:placeholder-shown) + label {
            top: -5px;
            left: 0;
            font-size: 14px;
            color: var(--theme);
            font-weight: 600;
            background-color: white;
            padding: 0 5px;
        }

    .container {
        margin-top: 50px;
    }

    .alert {
        font-size: 14px;
        padding: 10px;
        margin-bottom: 20px;
    }

    .rounded-pill {
        border-radius: 50px;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="text-center">Change Password</h4>
            <hr />

            @if (TempData["AlertMessage"] != null)
            {
                <div class="alert alert-danger text-white" style="background-color: #BF1E25;">
                    @TempData["AlertMessage"]
                </div>
            }

            @if (TempData["AlertMessage1"] != null)
            {
                <div class="alert alert-danger text-white" style="background-color: #BF1E25;">
                    @TempData["AlertMessage1"]
                </div>
            }

            <form id="login-form" asp-action="ChangePassword" asp-controller="Users" method="post" class="mt-4">
                <div class="form-floating">
                    <input type="password" class="form-control" id="newpassword" name="newpassword" placeholder="New Password" required>
                    <label for="newpassword">New Password</label>
                </div>

                <div class="form-floating">
                    <input type="password" class="form-control" id="conpassword" name="conpassword" placeholder="Confirm Password" required>
                    <label for="conpassword">Confirm Password</label>
                </div>

                <button type="submit" class="btn btn-success rounded-pill w-100">Change Password</button>
            </form>

            <div class="mt-3">
                <a class="btn btn-secondary rounded-pill w-100" asp-action="Index" asp-controller="Home">Back to List</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

