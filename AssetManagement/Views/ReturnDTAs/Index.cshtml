@model IEnumerable<AssetManagement.Models.ReturnDTA>

@{
    ViewData["Title"] = "Return Desktop Allocation";
}



<div class="m-4 px-1">
    <h4>   Return Desktop Allocation</h4>
    @if (TempData["Welcome"] != null)
    {
        <p>@TempData["Welcome"]</p>
    }

    @if (@TempData["AlertMessage"] != null)
    {
        <div id="alertMessage" class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["AlertMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div>
        <a id="createbtn" class="btn btn-outline-red createbtn" asp-controller="DesktopAllocations" asp-action="ReturnPartialView">
            <span class="fas fa-pencil-alt"></span> Create
        </a>
    </div>
</div>

<hr />

<div class="m-4">
    <div class="table-responsive">
        <table class="table table-striped table-datatable">
            <thead>
                <tr>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.ReturnID)
                    </th>
                    <th>
                        CODE
                    </th>
                    <th>
                        UNIT TAG
                    </th>
                    <th>
                        COMPUTER NAME
                    </th>
                    <th>
                      OWNER
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReturnType)
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.RTStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateUpdated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserUpdated)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.ReturnID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DesktopAllocation.DesktopCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DesktopAllocation.UnitTag)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DesktopAllocation.ComputerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DesktopAllocation.OwnerCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnType.Description)
                        </td>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.Status.status_code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserCreated.UserFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateUpdated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserUpdated.UserFullName)
                        </td>
                        <td>
                            <div class="d-flex flex-row gap-2 ">
                                @if (item.ReturnType.Return_Inv != "N")
                                {
                                    <a class="btn btn-sm btn-outline-primary editbtn" asp-action="Edit" asp-route-id="@item.ReturnID">Edit</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@if (TempData["SuccessNotification"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                title: 'Success',
                text: '@TempData["SuccessNotification"]',
                icon: 'success',
                timer: 3000, // Automatically close the notification after 3 seconds
                showConfirmButton: false
            });
        });
    </script>
}


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $(".editbtn").click(function () {
            $(".createbtn").hide();
            var id = $(this).data("id");
            // Remove the 'highlighted-row' class from any other row
            $("tr.highlighted-row").removeClass("highlighted-row");

            // Add the 'highlighted-row' class to the clicked row
            $(this).closest("tr").addClass("highlighted-row");

            $.ajax({
                url: "@Url.Action("Edit", "ReturnLTAs")",
                type: "GET",
                data: { id: id },
                success: function (res) {
                    $(".createform").html(res);
                }
            })
        })
    })
</script>
