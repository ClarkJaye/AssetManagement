@model AssetManagement.Models.ReturnDTA

@{
    ViewData["Title"] = "Create";
}


<div class="m-4 px-1">
    <h4>Return Desktop Allocation</h4>
    <hr />

<div>
    <form asp-action="Create">
        <div class="row form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-2">
                <label asp-for="AllocID" class="control-label"></label>
                <input asp-for="AllocID" readonly value="@ViewBag.Id" class="form-control" />
            </div>
            <div class="form-group col-md-2" id="ownertable">
                <label asp-for="RTtype" class="control-label"></label>
                <input asp-for="RTtype" class="form-control" id="oid" hidden />
                <input class="form-select" id="odes" readonly placeholder="select return type below" required/>
            </div>
                <div class="form-group col-md-2" hidden>
                <label asp-for="RTStatus" class="control-label"></label>
                <select asp-for="RTStatus" class="form-control" asp-items="ViewBag.RTStatus"></select>
            </div>
                <div class="form-groupcol-md-2 d-flex align-items-center gap-2" style="margin-top:23px;">
                    <input type="submit" value="Create" class="btn btn-red" />
                    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="DesktopAllocations">Back to List</a>
                </div>
        </div>
    </form>
</div>

<div class="displaytable"></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#ownertable").click(function () {
            $('#oid').val(null);
            $('#odes').val(null);

            $.ajax({
                url: "@Url.Action("ReturnPartialView", "ReturnTypes")",
                type: "GET",
                success: function (res) {
                    $(".displaytable").html(res);
                }
            })
        })



    })
</script>