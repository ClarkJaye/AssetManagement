@model IEnumerable<AssetManagement.Models.ReturnDTA>

@{
    ViewData["Title"] = "Index";
}

<div class="m-4">
    <h4>Disposed Desktop</h4>


    <div class="card shadow-sm card-selected">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-datatable">
                    <thead>
                        <tr>
                            <th hidden>
                                @Html.DisplayNameFor(model => model.ReturnID)
                            </th>
                            <th>
                                ID
                            </th>
                            <th>
                                OWNER
                            </th>
                            <th>
                                COMPUTER NAME
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReturnType)
                            </th>
                            <th hidden>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateCreated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateUpdated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserCreated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserUpdated)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.ReturnID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DesktopAllocation.AllocId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DesktopAllocation.OwnerCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DesktopAllocation.ComputerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReturnType.Description)
                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.Status.status_code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateCreated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateUpdated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserCreated.UserCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserUpdated.UserCode)
                                </td>
                                <td>
                                    <div class="d-flex flex-row gap-2 ">
                                        @if (item.ReturnType.TypeID != 1)
                                        {
                                            <a class="btn btn-sm bg-success text-white custom-fontsize editbtn" asp-action="Edit" asp-route-id="@item.ReturnID">Edit</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

