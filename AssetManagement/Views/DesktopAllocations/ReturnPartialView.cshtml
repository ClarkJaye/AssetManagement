@model IEnumerable<AssetManagement.Models.DesktopAllocation>

@{
    ViewData["Title"] = "Index";
}


<div class="m-4 px-1">
    <div class="allocation-details">
        <h4 class="allocation-title">Return Desktops Allocation</h4>
    </div>
    <div class="mb-2">
        <a class="btn  btn-outline-secondary" asp-controller="ReturnDTAS" asp-action="Index">
            <span class="fas fa-undo"></span> Back to List
        </a>
        <a class="btn  btn-outline-secondary" asp-action="Index" asp-controller="DesktopAllocations">
            <span class="fas fa-undo"></span>
            Go To Inventory Allocation
        </a>
    </div>


    <div class="card shadow-sm card-selected">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-datatable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Owner)
                            </th>
                            <th>
                                DESKTOP CODE
                            </th>
                            <th>
                                UNIT TAG
                            </th>
                            <th>
                                COMPUTER NAME
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FixedassetTag)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateDeployed)
                            </th>
                            <th>
                                CREATED AT
                            </th>
                            <th>
                                CREATED BY
                            </th>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Owner.OwnerFullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InventoryDetails.desktopInvCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InventoryDetails.unitTag)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ComputerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FixedassetTag)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateDeployed)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateCreated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Createdby.UserCode)
                                </td>
                                <td>
                                    <a class="btn btn-outline-danger editbtn" asp-action="Create" asp-controller="ReturnDTAs" asp-route-id="@item.AllocId">Return </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="displaytable"> </div>
</div>
