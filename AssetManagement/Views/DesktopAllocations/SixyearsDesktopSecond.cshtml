@model IEnumerable<AssetManagement.Models.DesktopNewAlloc>

@{
    ViewData["Title"] = "6 Years Owners";
}


<div class="allocation-details">
    <h4 class="allocation-title">6-Year-Old Desktops By Department</h4>
    @*    <h5 class="allocation-title">Second Owner Report</h5>*@
</div>

<div class="m-4">

    <div class="dropdown">
        <button class="btn btn-theme createbtn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Select Department
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="@Url.Action("SixyearsDesktopSecond", "DesktopAllocations", new { id = "FMCG" })">FMCG</a>
            <a class="dropdown-item" href="@Url.Action("SixyearsDesktopSecond", "DesktopAllocations", new { id = "FRESH AND STAPLE" })">FRESH AND STAPLE</a>
            <a class="dropdown-item" href="@Url.Action("SixyearsDesktopSecond", "DesktopAllocations", new { id = "GENERAL MERCHANDISE" })">GENERAL MERCHANDISE</a>
            <a class="dropdown-item" href="@Url.Action("SixyearsDesktopSecond", "DesktopAllocations", new { id = "DEPARTMENT STORE" })">DEPARTMENT STORE</a>
            <a class="dropdown-item" href="@Url.Action("SixyearsDesktopSecond", "DesktopAllocations", new { id = "APPLIANCES AND FURNITURE" })">APPLIANCES AND FURNITURE</a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.TotalAvailableLaptop))
    {
        <p style="color: red; font-weight: bold;">@ViewBag.TotalAvailableLaptop</p>
    }

    @if (ViewBag.Id != null)
    {
        <div class="card shadow-sm card-selected">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-datatable">
                        <thead>
                            <tr>
                                <th>
                                    DESKTOP CODE
                                </th>
                                <th>
                                    ID
                                </th>
                                <th>PO</th>
                                <th>
                                    UNIT TAG
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DesktopAllocation.FixedassetTag)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DesktopAllocation.ComputerName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Owner)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DesktopAllocation.DateDeployed)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateCreated)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateUpdated)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Createdby)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Updatedby)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InventoryDetails.desktopInvCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AllocId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InventoryDetails.PO)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InventoryDetails.unitTag)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DesktopAllocation.FixedassetTag)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DesktopAllocation.ComputerName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Owner.OwnerCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DesktopAllocation.DateDeployed)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateCreated)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateUpdated)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status.status_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Createdby.UserCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Updatedby.UserCode)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <p class="py-3">No desktops in this department are 6 years old yet!</p>
    }
</div>

