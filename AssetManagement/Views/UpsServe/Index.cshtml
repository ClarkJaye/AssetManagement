@model IEnumerable<AssetManagement.Models.UpsServe>

@{
    ViewData["Title"] = "Index";
}


<div class="m-4 px-1">
    <h4>Uninterruptible Power Supply Serve</h4>
    @if (TempData["Welcome"] != null)
    {
        <p>@TempData["Welcome"]</p>
    }
</div>

@if (@TempData["AlertMessage"] != null)
{
    <div id="alertMessage" class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="m-4 px-1  d-flex align-items-center gap-2">
    <a asp-controller="UPSServe" asp-action="Create" class="btn btn-outline-theme">
        <i class="fas fa-pencil-alt"></i> 
        <span>Create New</span>
    </a>
</div>

<hr />

<div class="m-4">
    <form method="post" action="@Url.Action("Delete", "UpsServe")">
        <!-- Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete the selected item(s)?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex align-items-center justify-content-between gap-2 mb-2 mx-2">
            <div>
                <button type="button" class="multi-delete-button btn btn-sm btn-danger disabled" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <span class="fas fa-trash"></span> Delete
                </button>
            </div>
            @*   <div>
            <a class="btn btn-secondary" asp-controller="UPSBatteryRep" asp-action="Inactive">
            <span class="fas fa-trash-alt"></span> Show Temporary Deleted
            </a>
            </div> *@
        </div>

        <div class="table-container table-responsive">
            <table class="table" id="upsServeTable">
                <thead>
                    <tr>
                        <th>
                            <div class="d-flex flex-column gap-1">
                                <Label for="select-all-checkbox" style="cursor:pointer;">ALL</Label>
                                <input type="checkbox" id="select-all-checkbox" class="custom-checkbox" />
                            </div>
                        </th>
                        <th>
                            UNIT_NO
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UpsStore)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UpsCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitServe)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitCreatedAt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User)
                        </th>
                        <th class="text-center">
                            ACTION
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <input type="checkbox" name="selectedIds" value="@item.UnitNo" class="item-checkbox custom-checkbox" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpsServeStore)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpsServeCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitServe)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitCreatedAt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.UserFullName)
                            </td>
                            <td>
                                <div>
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.UnitNo">
                                        <span class="fas fa-pencil-alt"></span> Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>


@if (TempData["SuccessNotification"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                title: 'Success',
                text: '@TempData["SuccessNotification"]',
                icon: 'success',
                timer: 3000,
                showConfirmButton: false
            });
        });
    </script>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        // Initialize DataTables
        $('#upsServeTable').DataTable({
            paging: true,
            lengthChange: true,
            searching: true,
            ordering: true,
            info: true,
            autoWidth: false,
            responsive: true,
            columnDefs: [{ targets: [0, 0], orderable: false }],
            language: {
                paginate: {
                    previous: "Previous",
                    next: "Next"
                }
            }
        });


        // Select/Deselect All Checkboxes Logic
        const selectAllCheckbox = document.getElementById("select-all-checkbox");
        const checkboxes = document.querySelectorAll('input[type="checkbox"][name="selectedIds"]');
        selectAllCheckbox.addEventListener("change", function () {
            checkboxes.forEach(cb => cb.checked = selectAllCheckbox.checked);
            toggleDeleteButton();
        });

        checkboxes.forEach(cb => {
            cb.addEventListener("change", toggleDeleteButton);
        });

        // Enable/Disable Delete Button Based on Selection
        function toggleDeleteButton() {
            const anyChecked = Array.from(checkboxes).some(cb => cb.checked);
            const deleteButton = document.querySelector('.multi-delete-button');
            if (anyChecked) {
                deleteButton.classList.remove('disabled');
            } else {
                deleteButton.classList.add('disabled');
            }
        }
    });
</script>
