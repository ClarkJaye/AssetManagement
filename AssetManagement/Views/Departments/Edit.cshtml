@model AssetManagement.Models.Department

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}
<div>
    <form asp-action="Edit">
        <div class="row form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dept_code" />
            <div class="form-group col-4">
                <label asp-for="Dept_name" class="control-label"></label>
                <input asp-for="Dept_name" class="form-control" />
                <span asp-validation-for="Dept_name" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Dept_status" class="control-label"></label>
                <input asp-for="Dept_status" />
                <span asp-validation-for="Dept_status" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DCreatedby" class="control-label"></label>
                <input asp-for="DCreatedby" />
                <span asp-validation-for="DCreatedby" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group col-4 mt-4">
                <input type="submit" value="Save" class="btn btn-theme" />
                <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
