@model PagedList.IPagedList<AssetManagement.Models.UserDepartment>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Chivo:wght@300;400;500;700&display=swap" />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18"></script>
<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }



    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
        height: 100vh;
        overflow: hidden;
    }

</style>
@if (TempData["Welcome"] != null)
{
    <div class="toast-notification animated-toast">
        <p>@TempData["Welcome"]</p>
    </div>
}
<h4>User Department</h4>

<p>
    <a asp-action="Create" asp-controller="UserDepartments" class="bg-success h5 text-white text-decoration-none p-2 btn createbtn promotypeTable" style="background-color: #106F04;">Create New</a>
</p>
@if (TempData["SuccessNotification"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                title: 'Success',
                text: '@TempData["SuccessNotification"]',
                icon: 'success',
                timer: 3000, // Automatically close the notification after 3 seconds
                showConfirmButton: false
            });
        });
    </script>
}


<div>
    <input type="text" id="filterInput" placeholder="Search...">
</div>

<div class="table-responsive table-container">
    <table class="table" style="text-align: center;">
    <thead>
        <tr>
            <th>
                    @Html.DisplayNameFor(model => model.First().User)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.First().Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserADLogin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Dept_name)
            </td>
            <td>
                    @Html.ActionLink("Delete", "Delete", new { userCode = item.UserCode, departmentCode = item.DeptCode }, new { onclick = "return confirm('Are you sure you want to delete this item?');",  style="color: #BF1E25; text-decoration: none;"})
            </td>
        </tr>
}
    </tbody>
</table>
</div>

<script>
    //FILTERING

    $(document).ready(function () {
        $('#filterInput').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('tbody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });


</script>