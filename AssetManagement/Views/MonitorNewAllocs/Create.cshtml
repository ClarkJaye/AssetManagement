@model AssetManagement.Models.MonitorNewAlloc

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Monitor New Allocation</h4>
<hr />
<div>
        <form asp-action="Create">
        <div class="row form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-2" hidden>
                <label asp-for="SecAllocId" class="control-label"></label>
                <input asp-for="SecAllocId" class="form-control" />
                <span asp-validation-for="SecAllocId" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="AllocId" class="control-label"></label>
                <input asp-for="AllocId" readonly value="@ViewBag.AllocId" class="form-control" style="background-color: white;" />
            </div>
            <div class="form-group col-2">
                <label asp-for="SecMonitorCode" class="control-label"></label>
                <input asp-for="SecMonitorCode" readonly value="@ViewBag.SecMonitorCode" class="form-control" style="background-color: white;" />
            </div>
            <div class="form-group col-2">
                <label asp-for="SerialNumber" class="control-label"></label>
                <input asp-for="SerialNumber" readonly value="@ViewBag.SerialNumber" class="form-control" style="background-color: white;" />
            </div>
            <div class="form-group col-2" id="ownertable">
                <label asp-for="SecOwnerCode" class="control-label"></label>
                <input asp-for="SecOwnerCode" class="form-control" id="oid" hidden />
                <input class="form-control" id="odes" readonly style="background-color: white;" />
            </div>

            <div class="form-group col-2" hidden>
                <label asp-for="SecAllocationStatus" class="control-label"></label>
                <select asp-for="SecAllocationStatus" class="form-control" asp-items="ViewBag.SecAllocationStatus"></select>
            </div>
            <div class="form-group col-2" style="margin-top:23px;">
                <input type="submit" value="Create" class="btn bg-success text-white" />
                <a class="btn bg-secondary text-white " asp-action="MonitorAllocPartialView" asp-controller="MonitorAllocations">Back</a>
            </div>
        </div>
        </form>
    </div>


<div class="displaytable"></div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<script>
    $(document).ready(function () {
        //OWNER

        $("#ownertable").click(function () {

            $('#oid').val(null);

            $('#odes').val(null);
            $.ajax({
                url: "@Url.Action("MonitorOwnerPartialView","Owners")",
                type: "GET",
                success: function (res) {
                    $(".displaytable").html(res);
                }
            })
        })



    })
</script>
