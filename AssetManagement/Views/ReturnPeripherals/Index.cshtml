@model IEnumerable<AssetManagement.Models.ReturnPeripheral>

@{
    ViewData["Title"] = "Index";
}


<div class="m-4 px-1">
    <h4>    Return Peripheral Allocation</h4>
    @if (TempData["Welcome"] != null)
    {
        <p>@TempData["Welcome"]</p>
    }
</div>

<div class="m-4 px-1">
    <a asp-controller="LaptopPeripheralAllocations" asp-action="ReturnPeripPartialView" class="btn btn-outline-theme">
        <span class="fas fa-pencil-alt"></span> Create New
    </a>
</div>

<hr />

<div class="m-4">
    <div class="table-responsive">
        <table id="returnRepTable" class="table table-striped">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        OWNER
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReturnType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateUpdated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserUpdated)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LaptopPeripheralAllocation.PeripheralAllocationId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LaptopPeripheralAllocation.OwnerCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnType.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status.status_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateCreated)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateUpdated)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserCreated.UserFullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserUpdated.UserFullName)
                            </td>
                            <td>
                                <div class="d-flex flex-row gap-2 ">
                                    @if (item.ReturnType.Return_Inv != "N")
                                    {
                                        <a class="btn btn-sm bg-success text-white custom-fontsize editbtn" asp-action="Edit" asp-route-id="@item.ReturnID">Edit</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="20" class="text-center">
                            No data available.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (TempData["SuccessNotification"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                title: 'Success',
                text: '@TempData["SuccessNotification"]',
                icon: 'success',
                timer: 3000, // Automatically close the notification after 3 seconds
                showConfirmButton: false
            });
        });
    </script>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        $(".editbtn").click(function () {
            $(".createbtn").hide();
            var id = $(this).data("id");
            // Remove the 'highlighted-row' class from any other row
            $("tr.highlighted-row").removeClass("highlighted-row");

            // Add the 'highlighted-row' class to the clicked row
            $(this).closest("tr").addClass("highlighted-row");

            $.ajax({
                url: "@Url.Action("Edit", "ReturnPeripherals")",
                type: "GET",
                data: { id: id },
                success: function (res) {
                    $(".createform").html(res);
                }
            })
        })

        // Initialize DataTables
        $('#returnRepTable').DataTable({
            paging: true,
            lengthChange: true,
            searching: true,
            ordering: true,
            info: true,
            autoWidth: false,
            responsive: true,
            columnDefs: [{ targets: [0, 0], orderable: false }],
            language: {
                paginate: {
                    previous: "Previous", // Change "Previous"
                    next: "Next" // Change "Next"
                }
            }
        });
    });
</script>
