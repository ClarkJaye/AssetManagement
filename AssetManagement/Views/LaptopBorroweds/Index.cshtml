@model IEnumerable<AssetManagement.Models.LaptopBorrowed>

@{
    ViewData["Title"] = "Index";
}


<div class="m-4 px-1">
    <h4>Borrowed Laptop</h4>
    @if (TempData["Welcome"] != null)
    {
        <p>@TempData["Welcome"]</p>
    }
</div>

@if (@TempData["AlertMessage"] != null)
{
    <div id="alertMessage" class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<hr />

<div class="mx-4">
    <div class="table-responsive">

        <!-- Action Buttons -->
        <div class="d-flex align-items-center gap-2 mb-2">
            <div>
                <a id="createbtn" class="btn btn-outline-red" asp-action="Create">
                    <span class="fas fa-pencil-alt"></span> Create New
                </a>
            </div>
            <div>
                <a class="btn btn-outline-secondary" asp-action="Returned">
                    <span class="fas fa-trash-alt"></span> Returned
                </a>
            </div>
        </div>


        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LaptopInventory)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Owner)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SerialNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateBorrow)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Remark)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateUpdated)
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.Status)
                        </t>
                    <th>
                            @Html.DisplayNameFor(model => model.UserCreated)
                    </th>
                    <th>
                            @Html.DisplayNameFor(model => model.UserUpdated)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LaptopInventory.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Owner.OwnerFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SerialNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateBorrow)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remark)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateUpdated)
                        </td>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.Status.status_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserCreated.UserFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserUpdated.UserFullName)
                        </td>
                        <td>
                            <form asp-action="Delete" method="post" class="delete-form">
                                <input type="hidden" name="id" value="@item.BorrowedID" />
                                <a class="btn btn-sm  bg-danger text-white custom-fontsize btn-delt">Return</a>

                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {

        $(".btn-delt").click(function () {
            $(this).closest("form").submit();
        })
    });

</script>