@model AssetManagement.Models.LaptopPeripheralAllocation

@{
    ViewData["Title"] = "Create";
}
<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }

    .custom-fontsize {
        font-size: 11px;
    }


    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
    }

    /* Add this CSS to adjust the top margin of the layout container */
    .container {
        margin-top: 70px; /* Adjust this value according to your navbar height */
    }

</style>
@{
    var alertMessage = TempData["AlertMessage"] as string;
}

@if (!string.IsNullOrEmpty(alertMessage))
{
    <div class="alert alert-danger" style="background-color: #BF1E25; color:white;">
        @alertMessage
    </div>
}
<h4>Laptop Peripheral Allocation</h4>
<hr />
<div>
        <form asp-action="Create">
        <div class="row form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-2" hidden
                <label asp-for="PeripheralAllocationId" class="control-label"></label>
                <input asp-for="PeripheralAllocationId" class="form-control" />
                <span asp-validation-for="PeripheralAllocationId" class="text-danger"></span>
            </div>
            <div class="form-group col-2" id="periptable">
                <label asp-for="PeripheralCode" class="control-label"></label>
                <input asp-for="PeripheralCode" class ="form-control" id="peripid" hidden/>
                <input class="form-control" id="peripdes" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2" id="ownertable">
                <label asp-for="OwnerCode" class="control-label"></label>
                <input asp-for="OwnerCode" class="form-control" id="oid" hidden />
                <input class="form-control" id="odes" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2">
                <label asp-for="SerialNumber" class="control-label"></label>
                <input asp-for="SerialNumber" class="form-control" required/>
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="FixedAssetTag" class="control-label"></label>
                <input asp-for="FixedAssetTag" class="form-control" required />
                <span asp-validation-for="FixedAssetTag" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="DatePurchased" class="control-label"></label>
                <input asp-for="DatePurchased" class="form-control" required />
                <span asp-validation-for="DatePurchased" class="text-danger"></span>
            </div>
            <div class="form-group col-2" hidden>
                <label asp-for="AgeYears" class="control-label"></label>
                <input asp-for="AgeYears" class="form-control" />
                <span asp-validation-for="AgeYears" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="PONumber" class="control-label"></label>
                <input asp-for="PONumber" class="form-control" required/>
                <span asp-validation-for="PONumber" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input type="number" value="0" asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group col-2" hidden>
                <label asp-for="PeripheralAllocStatus" class="control-label"></label>
                <select asp-for="PeripheralAllocStatus" class ="form-control" asp-items="ViewBag.PeripheralAllocStatus"></select>
            </div>
            <div class="form-group col-2" style="margin-top:23px;">
                <input type="submit" value="Create" class="btn bg-success text-white" />
                <a class="btn bg-secondary text-white " asp-action="Index">BACK</a>
            </div>
        </div>
        </form>
    </div>


<div class="displaytable">
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    $(document).ready(function () {

        $("#periptable").click(function () {

            $('#peripid').val(null);

            $('#peripdes').val(null);
            $.ajax({
                url: "@Url.Action("LTPeripPartialView","LaptopPeripherals")",
                type: "GET",
                success: function (res) {
                    $(".displaytable").html(res);
                }
            })
        })

        //OWNER

        $("#ownertable").click(function () {

            $('#oid').val(null);

            $('#odes').val(null);
            $.ajax({
                url: "@Url.Action("LTPOwner","Owners")",
                type: "GET",
                success: function (res) {
                    $(".displaytable").html(res);
                }
            })
        })



    })
</script>
