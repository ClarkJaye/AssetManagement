@model IEnumerable<AssetManagement.Models.LaptopPeripheralAllocation>

@{
    ViewData["Title"] = "First Owners Laptop Peripheral";
}

<div class="mx-4">
    <div class="allocation-details">
        <h4 class="allocation-title">First Owners Laptop Peripheral Allocation</h4>
    </div>

    <div class="mb-3">
        <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="SecondOwnerPeripAllocs">Back to List</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SerialNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FixedAssetTag)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DatePurchased)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AgeYears)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PONumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PeripheralAllocCreatedAt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PeripheralAllocUpdateAt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LaptopPeripheral)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Owner)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdatedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitPrice)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.SerialNumber)
                        </td>
                        <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.FixedAssetTag)
                        </td>
                        <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.DatePurchased)
                        </td>
                        <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.AgeYears)
                        </td>
                        <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.PONumber)
                        </td>
                        <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.PeripheralAllocCreatedAt)
                        </td>
                        <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.PeripheralAllocUpdateAt)
                        </td>
                        <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.LaptopPeripheral.PeripheralDescription)
                        </td>
                        <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.Owner.OwnerCode)
                        </td>
                        <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.Status.status_code)
                        </td>
                        <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.CreatedBy.UserCode)
                        </td>
                        <td class=" editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.UpdatedBy.UserCode)
                        </td>
                        <td class="editbtn" id="@item.LaptopPeripheral.PeripheralDescription" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.UnitPrice)
                        </td>
                        <td>
                            <a class="btn btn-sm bg-secondary  text-white custom-fontsize editbtn" asp-action="Create" asp-controller="SecondOwnerPeripAllocs" asp-route-id2="@item.DatePurchased" asp-route-id="@item.PeripheralAllocationId" asp-route-ids="@item.PeripheralCode">Second Owner</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="displaytable"> </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $(document).on("click", "#userCode", function () {
            var userCode = "@ViewBag.Id";

            $.ajax({
                url: "@Url.Action("InventorySecOwnerDetails", "LaptopInventories")",
                type: "GET",
                data: { userCODE: userCode },
                success: function (res) {
                    $(".displaytable").html(res);
                }
            });
        });


        $(document).on("click", "#userCode2", function () {
            var userCode = "@ViewBag.Id";

            $.ajax({
                url: "@Url.Action("seeDetails", "LaptopInventories")",
                type: "GET",
                data: { userCODE: userCode },
                success: function (res) {
                    $(".displaytable").html(res);
                }
            });
        });


        $(document).on("click", "#userCode3", function () {
            var userCode = "@ViewBag.Id";

            $.ajax({
                url: "@Url.Action("ReturnDetails", "LaptopInventories")",
                type: "GET",
                data: { userCODE: userCode },
                success: function (res) {
                    $(".displaytable").html(res);
                }
            });
        });

    });
</script>

