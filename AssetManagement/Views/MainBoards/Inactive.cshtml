@model IEnumerable<AssetManagement.Models.MainBoard>

@{
    ViewData["Title"] = "Inactive";
}
<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }


    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
        overflow: hidden;
    }

    /* Add this CSS to adjust the top margin of the layout container */
    .container {
        margin-top: 70px; /* Adjust this value according to your navbar height */
    }

    .search {
        margin-top: 10px;
    }

</style>


<div class="createform"></div>
<a class="btn bg-secondary text-white " asp-action="Index">Back</a>
<h4 class="title">Inactive Main Board</h4>
<div class="table-container">
    <table class="table custom-fontsize p-4">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BoardDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BoardStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BoardCreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BoardCreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BoardUpdatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BoardUpdatedDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BoardDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BoardStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BoardCreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BoardCreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BoardUpdatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BoardUpdatedDate)
                    </td>
                    <td class="d-flex flex-row gap-2">
                        <a class="btn btn-sm bg-success text-white custom-fontsize btn-activate" asp-action="Activate" asp-route-id="@item.BoardID" data-id="@item.BoardID">Activate</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(document).ready(function () {
        $('.btn-activate').click(function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            $.ajax({
                url: '@Url.Action("Activate")',
                type: 'POST',
                data: { id: id },
                success: function () {
                    location.reload();
                },
                error: function () {
                    console.log('Error occurred while activating the module.');
                }
            });
        });
    });
</script>