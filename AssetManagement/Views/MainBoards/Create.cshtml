@model AssetManagement.Models.MainBoard

@{
    ViewData["Title"] = "Create";
    Layout = null;
}


<form asp-controller="Mainboards" asp-action="Create">
    <div class="row g-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-2">
            <label asp-for="BoardDescription" class="form-label"></label>
            <input asp-for="BoardDescription" class="form-control" required />
            <span asp-validation-for="BoardDescription" class="text-danger"></span>
        </div>
        <div class="col-md-2 d-flex align-items-end gap-2">
            <input type="submit" value="Add" class="btn btn-theme" />
            <a class="btn btn-outline-secondary" asp-controller="Mainboards" asp-action="Index">Back</a>
        </div>
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
