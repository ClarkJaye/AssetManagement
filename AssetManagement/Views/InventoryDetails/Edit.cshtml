@model AssetManagement.Models.InventoryDetails

@{
    ViewData["Title"] = "Edit Laptop";
}

<div class="mx-4">
    <h1>Edit</h1>

    <h4>InventoryDetails</h4>
    <hr />
    <div>
        <form asp-action="Edit">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-2 mb-2">
                    <label asp-for="laptoptinvCode" class="control-label"></label>
                    <input asp-for="laptoptinvCode" class="form-control" readonly />
                    <span asp-validation-for="laptoptinvCode" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="SerialCode" />
                <div class="form-group col-md-2 mb-2">
                    <label asp-for="PO" class="control-label"></label>
                    <input asp-for="PO" class="form-control" />
                    <span asp-validation-for="PO" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2 mb-2">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2 mb-2">
                    <label asp-for="Vendor" class="control-label"></label>
                    <input asp-for="Vendor" class="form-control"/>
                    <span asp-validation-for="Vendor" class="text-danger"></span>
                </div>
                <div class="form-group cold-md-2 d-flex align-items-end gap-3 mt-3">
                    <input type="submit" value="Save" class="btn btn-theme " />
                    <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
