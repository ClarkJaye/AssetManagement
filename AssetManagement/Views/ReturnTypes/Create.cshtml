@model AssetManagement.Models.ReturnType

@{
    ViewData["Title"] = "Create";
}
<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }

    .custom-fontsize {
        font-size: 11px;
    }


    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
    }

    /* Add this CSS to adjust the top margin of the layout container */
    .container {
        margin-top: 70px; /* Adjust this value according to your navbar height */
    }

</style>

<h4>Return Type</h4>
<hr />
<div >
        <form asp-action="Create">
        <div class="row form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-4">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group col-4">
            <label  class="control-label">YES / NO</label>
                <select asp-for="Return_Inv" class="form-control">
                <option value="Y">YES</option>
                <option value="N">NO</option>
            </select>
            </div>

            <div class="form-group col-4" hidden>
                <label asp-for="Return_Status" class="control-label"></label>
                <input asp-for="Return_Status" value="AC" class="form-control" />
                <span asp-validation-for="Return_Status" class="text-danger"></span>
            </div>
            <div class="form-group col-4" style="margin-top:23px;">
                <input type="submit" value="Create" class="btn bg-success text-white" />
                <a class="btn bg-secondary text-white " asp-action="Index">BACK</a>
            </div>
        </div>
        </form>
    
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
