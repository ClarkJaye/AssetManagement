@model IEnumerable<AssetManagement.Models.ReturnMTA>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<h4>Return Monitor</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                DESCRIPTION
            </th>
            <th>
                CODE
            </th>
            <th>
                SERIAL
            </th>
            <th>
                ASSET TAG
            </th>
            <th>
                RETURNER NAME
            </th>
            <th>
                DATE DEPLOYED
            </th>
            <th>
                RETURN TYPE
            </th>
            <th>
                CREATED AT
            </th>
            <th>
                CREATED BY
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MonitorAllocation.MonitorDetails.MonitorInventory.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MonitorAllocation.MonitorDetails.monitorCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MonitorAllocation.MonitorDetails.SerialNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MonitorAllocation.FixedassetTag)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MonitorAllocation.Owner.OwnerFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MonitorAllocation.MonitorDetails.DeployedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReturnType.Description)
                    </td>
                    <td>
                        @item.DateCreated.ToString("MMM dd yyyy h:mm tt")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserCreated.UserCode)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="20" class="text-center">
                    No data available.
                </td>
            </tr>
        }
    </tbody>
</table>

