@model IEnumerable<AssetManagement.Models.OS>

@{
    Layout = null;
}
@* <input type="text" id="filterInput" placeholder="Search..."> *@

<style>
    .table tbody tr {
        cursor: pointer !important;
    }

        .table tbody tr:hover {
            background: var(--bs-gray-400) !important;
        }

    .highlighted-row {
        background: var(--bs-gray-400) !important;
    }
</style>

<div class="table-container table-responsive mt-5" style="cursor: pointer;">
    <table class="table">
        <thead class="sticky-top" style="z-index:1; position:relative">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OSDescription)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.OSStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OSCreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OSCreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OSUpdatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OSUpdatedDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-id="@item.OSId" data-od="@item.OSDescription">
                    <td>
                        @Html.DisplayFor(modelItem => item.OSDescription)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.OSStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OSCreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OSCreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OSUpdatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OSUpdatedDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {


        // Add click event listener to each row in the table
        $('table tbody tr').click(function () {
            // Get the id from the clicked row's data-id attribute
            var id = $(this).data('id');
            var od = $(this).data('od');


            // Remove the 'highlighted-row' class from any other row
            $("tr.highlighted-row").removeClass("highlighted-row");

            // Add the 'highlighted-row' class to the clicked row
            $(this).closest("tr").addClass("highlighted-row");
            $('#osid').val(id);
            $('#osdes').val(od);


        });

    });

    //FILTERING

    $(document).ready(function () {
        $('#filterInput').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('tbody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
