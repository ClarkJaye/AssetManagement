@model AssetManagement.Models.DesktopInventory

@{
    ViewData["Title"] = "Edit Dekstop";
}

<div class="m-4">
    <h4>Edit Dekstop Inventory</h4>
    @if (TempData["Welcome"] != null)
    {
        <p>@TempData["Welcome"]</p>
    }

    @if (@TempData["AlertMessage"] != null)
    {
        <div id="alertMessage" class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["AlertMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <hr />

    <div class="table-responsive">
        <table class="table">
            <tr>
                <td hidden>
                    <label asp-for="desktopInvCode" class="control-label"></label>
                    @Model.desktopInvCode
                </td>
                <td>
                    <label asp-for="Description" class="control-label"><b>Description :</b></label>
                    @Model.Description
                </td>
                <td>
                    <label asp-for="DTLevel" class="control-label"><b>Level :</b></label>
                    @Model.Level?.LevelDescription
                </td>
                <td>
                    <label asp-for="DTBrand" class="control-label"><b>Brand :</b></label>
                    @Model.Brand?.BrandDescription
                </td>
                <td>
                    <label asp-for="DTModel" class="control-label"><b>Model :</b></label>
                    @Model.Model?.ModelDescription
                </td>
                <td>
                    <label asp-for="DTcpu" class="control-label"><b>CPU :</b></label>
                    @Model.CPU?.CPUDescription
                </td>
                <td>
                    <label asp-for="DTHardisk" class="control-label"><b>Hardisk :</b></label>
                    @Model.HardDisk?.HDDescription
                </td>
                <td>
                    <label asp-for="DTMemory" class="control-label"><b>Memory :</b></label>
                    @Model.Memory?.MemoryDescription
                </td>
                <td>
                    <label asp-for="DTOS" class="control-label"><b>OS :</b></label>
                    @Model.OS?.OSDescription
                </td>


            </tr>
        </table>
    </div>
    <hr />
    <div class="row">
        <form asp-action="Edit" method="POST">
            <div class="row form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group col-md-3 mb-3">
                    <label asp-for="desktopInvCode" class="control-label"></label>
                    <input asp-for="desktopInvCode" class="form-control" readonly />
                    <span asp-validation-for="desktopInvCode" class="text-danger"></span>
                </div>

                <!-- Editable Description -->
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Dropdown for DTLevel -->
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="DTLevel" class="control-label"></label>
                    <select asp-for="DTLevel" class="form-select" asp-items="ViewBag.DTLevel">
                        <option selected disabled>@Model?.Level?.LevelDescription</option>
                    </select>
                    <!-- Hidden input to retain the value for the controller -->
                    <input type="hidden" asp-for="DTLevel" value="@Model?.Level?.LevelId" />
                    <span asp-validation-for="DTLevel" class="text-danger"></span>
                </div>

                <!-- Dropdown for DTBrand -->
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="DTBrand" class="control-label"></label>
                    <select asp-for="DTBrand" class="form-select" asp-items="ViewBag.DTBrand">
                        <option selected disabled>@Model?.Brand?.BrandDescription</option>
                    </select>
                    <input type="hidden" asp-for="DTBrand" value="@Model?.Brand?.BrandId" />
                    <span asp-validation-for="DTBrand" class="text-danger"></span>
                </div>

                <!-- Dropdown for DTModel -->
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="DTModel" class="control-label"></label>
                    <select asp-for="DTModel" class="form-select" asp-items="ViewBag.DTModel">
                        <option selected disabled>@Model?.Model?.ModelDescription</option>
                    </select>
                    <input type="hidden" asp-for="DTModel" value="@Model?.Model?.ModelId" />
                    <span asp-validation-for="DTModel" class="text-danger"></span>
                </div>

                <!-- Dropdown for DTMBoard -->
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="DTMBoard" class="control-label"></label>
                    <select asp-for="DTMBoard" class="form-select" asp-items="ViewBag.DTMBoard">
                        <option selected disabled>@Model?.MainBoard?.BoardDescription</option>
                    </select>
                    <input type="hidden" asp-for="DTMBoard" value="@Model?.MainBoard?.BoardID" />
                    <span asp-validation-for="DTMBoard" class="text-danger"></span>
                </div>

                <!-- Dropdown for DTcpu -->
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="DTcpu" class="control-label"></label>
                    <select asp-for="DTcpu" class="form-select" asp-items="ViewBag.DTcpu">
                        <option selected disabled>@Model?.CPU?.CPUDescription</option>
                    </select>
                    <input type="hidden" asp-for="DTcpu" value="@Model?.CPU?.CPUId" />
                    <span asp-validation-for="DTcpu" class="text-danger"></span>
                </div>

                <!-- Dropdown for DTgraphics -->
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="DTgraphics" class="control-label"></label>
                    <select asp-for="DTgraphics" class="form-select" asp-items="ViewBag.DTgraphics">
                        <option selected disabled>@Model?.GraphicsCard?.GraphicsDescription</option>
                    </select>
                    <input type="hidden" asp-for="DTgraphics" value="@Model?.GraphicsCard?.GraphicsID" />
                    <span asp-validation-for="DTgraphics" class="text-danger"></span>
                </div>

                <!-- Dropdown for DTHardisk -->
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="DTHardisk" class="control-label"></label>
                    <select asp-for="DTHardisk" class="form-select" asp-items="ViewBag.DTHardisk">
                        <option selected disabled>@Model?.HardDisk?.HDDescription</option>
                    </select>
                    <input type="hidden" asp-for="DTHardisk" value="@Model?.HardDisk?.HDId" />
                    <span asp-validation-for="DTHardisk" class="text-danger"></span>
                </div>

                <!-- Dropdown for DTMemory -->
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="DTMemory" class="control-label"></label>
                    <select asp-for="DTMemory" class="form-select" asp-items="ViewBag.DTMemory">
                        <option selected disabled>@Model?.Memory?.MemoryDescription</option>
                    </select>
                    <input type="hidden" asp-for="DTMemory" value="@Model?.Memory?.MemoryId" />
                    <span asp-validation-for="DTMemory" class="text-danger"></span>
                </div>

                <!-- Dropdown for DTOS -->
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="DTOS" class="control-label"></label>
                    <select asp-for="DTOS" class="form-select" asp-items="ViewBag.DTOS">
                        <option selected disabled>@Model?.OS?.OSDescription</option>
                    </select>
                    <input type="hidden" asp-for="DTOS" value="@Model?.OS?.OSId" />
                    <span asp-validation-for="DTOS" class="text-danger"></span>
                </div>

                <!-- Hidden Inputs -->
                <div class="form-group col-md-3 mb-3" hidden>
                    <label asp-for="AllocatedNo" class="control-label"></label>
                    <input asp-for="AllocatedNo" class="form-control" />
                    <span asp-validation-for="AllocatedNo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3 mb-3" hidden>
                    <label asp-for="DTCreated" class="control-label"></label>
                    <input asp-for="DTCreated" class="form-control" />
                    <span asp-validation-for="DTCreated" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3 mb-3" hidden>
                    <label asp-for="DateCreated" class="control-label"></label>
                    <input asp-for="DateCreated" class="form-control" />
                    <span asp-validation-for="DateCreated" class="text-danger"></span>
                </div>

                <div class="d-flex align-items-end gap-3 mt-2">
                    <input type="submit" value="Save" class="btn btn-red" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

