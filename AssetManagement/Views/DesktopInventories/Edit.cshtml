@model AssetManagement.Models.DesktopInventory

@{
    ViewData["Title"] = "Edit";
}

<h4>Desktop Inventory</h4>
<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }

    .custom-fontsize {
        font-size: 11px;
    }


    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
    }

    /* Add this CSS to adjust the top margin of the layout container */
    .container {
        margin-top: 70px; /* Adjust this value according to your navbar height */
    }

</style>
@{
    var alertMessage = TempData["AlertMessage"] as string;
    if (!string.IsNullOrEmpty(alertMessage))
    {
        <div id="alert" class="alert alert-danger alert-dismissible fade show" role="alert" style="background-color: #BF1E25; color: white;">
            @alertMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<script>
    $(document).ready(function () {
        // Close the alert after 6 seconds
        setTimeout(function () {
            $("#alert").alert("close");
        }, 5000);
    });
</script>
<hr />
<div>
    <table class="table">
        <tr>
            <td hidden>
                <label asp-for="desktopInvCode" class="control-label"></label>
                @Model.desktopInvCode
            </td>
            <td>
                <label asp-for="Description" class="control-label"><b>Description :</b></label>
                @Model.Description
            </td>
            <td>
                <label asp-for="DTLevel" class="control-label"><b>Level :</b></label>
                @Model.Level?.LevelDescription
            </td>
            <td>
                <label asp-for="DTBrand" class="control-label"><b>Brand :</b></label>
                @Model.Brand?.BrandDescription
            </td>
            <td>
                <label asp-for="DTModel" class="control-label"><b>Model :</b></label>
                @Model.Model?.ModelDescription
            </td>
            <td>
                <label asp-for="DTcpu" class="control-label"><b>CPU :</b></label>
                @Model.CPU?.CPUDescription
            </td>
            <td>
                <label asp-for="DTHardisk" class="control-label"><b>Hardisk :</b></label>
                @Model.HardDisk?.HDDescription
            </td>
            <td>
                <label asp-for="DTMemory" class="control-label"><b>Memory :</b></label>
                @Model.Memory?.MemoryDescription
            </td>
            <td>
                <label asp-for="DTOS" class="control-label"><b>OS :</b></label>
                @Model.OS?.OSDescription
            </td>


        </tr>
    </table>
</div>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="row form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-2" >
                <label asp-for="desktopInvCode" class="control-label"></label>
                <input readonly style="background-color: white;" asp-for="desktopInvCode" class="form-control" />
                <span asp-validation-for="desktopInvCode" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-2" id="leveltable">
                <label asp-for="DTLevel" class="control-label"></label>
                <input asp-for="DTLevel"  class="form-control" id="levelid" hidden />
                <input class="form-control" id="leveldes" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2" id="brandtable">
                <label asp-for="DTBrand" class="control-label"></label>
                <input asp-for="DTBrand" class="form-control" id="brandid" hidden />
                <input class="form-control" id="branddes" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2" id="modeltable">
                <label asp-for="DTModel" class="control-label"></label>
                <input asp-for="DTModel"  class="form-control" id="modelid" hidden />
                <input class="form-control" id="modeldes" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2" id="boardclick">
                <label asp-for="DTMBoard" class="control-label"></label>
                <input asp-for="DTMBoard"  class="form-control" id="boardid" hidden />
                <input class="form-control" id="boardes" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2" id="cputable">
                <label asp-for="DTcpu" class="control-label"></label>
                <input asp-for="DTcpu"  class="form-control" id="cpuid" hidden />
                <input class="form-control" id="cpudes" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2" id="graphicsclick">
                <label asp-for="DTgraphics" class="control-label"></label>
                <input asp-for="DTgraphics"  class="form-control" id="graphicsid" hidden />
                <input class="form-control" id="graphicsdes" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2" id="harddisktable">
                <label asp-for="DTHardisk" class="control-label"></label>
                <input asp-for="DTHardisk"  class="form-control" id="hdid" hidden />
                <input class="form-control" id="hddes" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2" id="memorytable">
                <label asp-for="DTMemory" class="control-label"></label>
                <input asp-for="DTMemory"  class="form-control" id="mid" hidden />
                <input class="form-control" id="mdes" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2" id="ostable">
                <label asp-for="DTOS" class="control-label"></label>
                <input asp-for="DTOS"  class="form-control" id="osid" hidden />
                <input class="form-control" id="osdes" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2" hidden>
                <label asp-for="AllocatedNo" class="control-label"></label>
                <input asp-for="AllocatedNo"  class="form-control" />
                <span asp-validation-for="AllocatedNo" class="text-danger"></span>
            </div>
            <div class="form-group col-2" hidden>
                <label asp-for="DTCreated" class="control-label"></label>
                <input asp-for="DTCreated"  class="form-control" />
                <span asp-validation-for="DTCreated" class="text-danger"></span>
            </div>
            <div class="form-group col-2" hidden>
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated"  class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group col-2 mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn bg-secondary text-white " asp-action="Index">BACK</a>
            </div>
        </div>
    </form>
</div>
<div class="displaytable">
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
