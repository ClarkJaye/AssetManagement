@model IEnumerable<AssetManagement.Models.DesktopNewAlloc>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Chivo:wght@300;400;500;700&display=swap" />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18"></script>
<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }


    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
        overflow: hidden;
    }

</style>
<h4>Second Owner Desktop Allocation</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateUpdated)
            </th>
            <th>
                INVENTORY DETAILS
            </th>
            <th>
               DESKTOP ALLOCATION
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesktopInventory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Createdby)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updatedby)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateUpdated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InventoryDetails.unitTag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesktopAllocation.AllocId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.status_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesktopInventory.desktopInvCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owner.OwnerCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Createdby.UserCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updatedby.UserCode)
                </td>
            </tr>
        }
    </tbody>
</table>

