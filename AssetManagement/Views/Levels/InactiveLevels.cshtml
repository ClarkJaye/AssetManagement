@model IEnumerable<AssetManagement.Models.Level>

@{
    ViewData["Title"] = "Index";
}
<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }



    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
    }

    /* Add this CSS to adjust the top margin of the layout container */
    .container {
        margin-top: 70px; /* Adjust this value according to your navbar height */
    }

</style>
<div class="createform"></div>
<a class="btn btn-sm bg-secondary text-white custom-fontsize" asp-action="Index">Back To List</a>
<h4 class="title ">
    Inactive Levels
</h4>
<div class="table-responsive scrollable-container">
    <table class="table custom-fontsize p-4">
        <thead class="sticky-top" style="z-index:1; position:relative">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LevelDescription)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.LevelStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LevelCreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LevelCreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LevelUpdatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LevelUpdatedDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelDescription)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.LevelStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelCreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelCreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelUpdatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelUpdatedDate)
                    </td>
                    <td class="d-flex flex-row gap-2">
                        <a class="btn btn-sm bg-success text-white custom-fontsize btn-activate notify" asp-action="Activate" asp-route-id="@item.LevelId" data-id="@item.LevelId">Activate</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('.btn-activate').click(function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            $.ajax({
                url: '@Url.Action("Activate")',
                type: 'POST',
                data: { id: id },
                success: function () {
                    location.reload();
                },
                error: function () {
                    console.log('Error occurred while activating the module.');
                }
            });
        });
    });
</script>
