@model IEnumerable<AssetManagement.Models.Level>

@{
    Layout = null;
}

<!-- Action Buttons -->
<div class="d-flex align-items-center justify-content-end mt-5 mb-3">
    <div class="d-flex align-items-center gap-2">
        <input type="text" id="filterInput" placeholder="Search..." class="form-control" style="width: 350px;">
    </div>
</div>

<div class="table-container table-responsive" style="cursor: pointer;">
    <table class="table">
        <thead class="sticky-top" style="z-index:1; position:relative">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LevelDescription)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.LevelStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LevelCreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LevelCreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LevelUpdatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LevelUpdatedDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-id="@item.LevelId" data-ld="@item.LevelDescription">
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelDescription)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.LevelStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelCreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelCreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelUpdatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelUpdatedDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>

    $(document).ready(function () {

      
    // Add click event listener to each row in the table
    $('table tbody tr').click(function () {
        // Get the id from the clicked row's data-id attribute
        var id = $(this).data('id');
        var ld = $(this).data('ld');


        // Remove the 'highlighted-row' class from any other row
        $("tr.highlighted-row").removeClass("highlighted-row");

        // Add the 'highlighted-row' class to the clicked row
        $(this).closest("tr").addClass("highlighted-row");
        $('#levelid').val(id);
        $('#leveldes').val(ld);


        });

    });

    //FILTERING

    $(document).ready(function () {
        $('#filterInput').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('tbody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>