@model AssetManagement.Models.Vendor

@{
    ViewData["Title"] = "Create";
    Layout = null;
}


<form asp-controller="Vendors" asp-action="Create">
    <div class="row g-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-2">
            <label asp-for="VendorName" class="form-label"></label>
            <input asp-for="VendorName" class="form-control" required />
            <span asp-validation-for="VendorName" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label asp-for="VendorAddress" class="form-label"></label>
            <input asp-for="VendorAddress" class="form-control" required />
            <span asp-validation-for="VendorAddress" class="text-danger"></span>
        </div>
        <div class="col-md-2 d-flex align-items-end gap-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-secondary" asp-controller="Vendors" asp-action="Index">Back</a>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}