@model IEnumerable<AssetManagement.Models.LaptopAllocation>

@{
    ViewData["Title"] = "Index";
}

<div class="m-4 mt-2">

    <div class="allocation-details">
        <h4 class="allocation-title">Return Laptops Allocation</h4>
    </div>
    <div class="mb-2">
        <a class="btn btn-sm btn-outline-secondary" asp-action="Index">
            <span class="fas fa-undo"></span> Back to List
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-datatable">
            <thead>
                <tr>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.AllocId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Owner)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LaptopInventory)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SerialNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FixedassetTag)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ComputerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateDeployed)
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.AllocationStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateUpdated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Createdby)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Updatedby)
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.AllocId)
                        </td>
                        <td class="editbtn" id="@item.LaptopInventory.Description" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.Owner.OwnerCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LaptopInventory.Description)
                        </td>
                        <td class="editbtn" id="@item.LaptopInventory.Description" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.SerialNumber)
                        </td>
                        <td class="editbtn" id="@item.LaptopInventory.Description" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.FixedassetTag)
                        </td>
                        <td class="editbtn" id="@item.LaptopInventory.Description" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.ComputerName)
                        </td>
                        <td class="editbtn" id="@item.LaptopInventory.Description" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.DateDeployed)
                        </td>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.AllocationStatus)
                        </td>
                        <td class="editbtn" id="@item.LaptopInventory.Description" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td class="editbtn" id="@item.LaptopInventory.Description" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.DateUpdated)
                        </td>
                        <td class="editbtn" id="@item.LaptopInventory.Description" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.Createdby.UserFullName)
                        </td>
                        <td class="editbtn" id="@item.LaptopInventory.Description" id="userCode2" name="userCODE">
                            @Html.DisplayFor(modelItem => item.Updatedby.UserFullName)
                        </td>
                        <td>
                            <a class="btn btn-sm btn-secondary" asp-action="Create" asp-controller="ReturnLTAs" asp-route-id="@item.AllocId">Return </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="displaytable"> </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $(document).on("click", "#userCode", function () {
            var userCode = "@ViewBag.Id";

            $.ajax({
                url: "@Url.Action("InventorySecOwnerDetails", "LaptopInventories")",
                type: "GET",
                data: { userCODE: userCode },
                success: function (res) {
                    $(".displaytable").html(res);
                }
            });
        });


        $(document).on("click", "#userCode2", function () {
            var userCode = "@ViewBag.Id";

            $.ajax({
                url: "@Url.Action("seeDetails", "LaptopInventories")",
                type: "GET",
                data: { userCODE: userCode },
                success: function (res) {
                    $(".displaytable").html(res);
                }
            });
        });


        $(document).on("click", "#userCode3", function () {
            var userCode = "@ViewBag.Id";

            $.ajax({
                url: "@Url.Action("ReturnDetails", "LaptopInventories")",
                type: "GET",
                data: { userCODE: userCode },
                success: function (res) {
                    $(".displaytable").html(res);
                }
            });
        });

    });
</script>


