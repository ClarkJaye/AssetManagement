@model IEnumerable<AssetManagement.Models.LaptopBorrowed>

@{
    ViewData["Title"] = "Index";
}


<div class="m-4">
    <div class="allocation-details">
        <h4 class="allocation-title">Borrowed Laptops</h4>
    </div>
    <div class="report-view">
        <div class="report-item">
            <span class="report-label">Total Borrowed Laptop:</span>
            <span class="report-value">@ViewBag.TotalDisposeLaptop</span>
        </div>
    </div>


    <div class="card shadow-sm card-selected">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-datatable">
                    <thead>
                        <tr>
                            <th>
                                LAPTOP CODE
                            </th>
                            <th>
                                LAPTOP DESCRIPTION
                            </th>
                            <th>
                                BRAND
                            </th>
                            <th>
                                LEVEL
                            </th>
                            <th>
                                OS
                            </th>
                            <th>
                                MEMORY
                            </th>
                            <th>
                                HARDDISK
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Owner)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SerialNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateBorrow)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Remark)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateCreated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateUpdated)
                            </th>
                            <th hidden>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserCreated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserUpdated)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.LaptopInventory.laptoptinvCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.LaptopInventory.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.LaptopInventory.Brand.BrandDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.LaptopInventory.Level.LevelDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.LaptopInventory.OS.OSDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.LaptopInventory.Memory.Capacity.CapacityDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.LaptopInventory.HardDisk.Capacity.CapacityDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Owner.OwnerFullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SerialNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateBorrow)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remark)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateCreated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateUpdated)
                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.Status.status_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserCreated.UserCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserUpdated.UserCode)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

