@model IEnumerable<AssetManagement.Models.SecondOwnerAlloc>
@{
    ViewData["Title"] = "4 Years Old Owner";
}




<div class="m-4">
    <div class="allocation-details">
        <h4 class="allocation-title">4-Year-Old Laptops By Department</h4>
        @*  <h5 class="allocation-title">Second Owner Report</h5>*@
    </div>



    <div class="dropdown">
        <button class="btn btn-theme  createbtn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Select Department
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="@Url.Action("LaptopReportsDeploy2", "LaptopAllocations", new { id = "FMCG" })">FMCG</a>
            <a class="dropdown-item" href="@Url.Action("LaptopReportsDeploy2", "LaptopAllocations", new { id = "FRESH AND STAPLE" })">FRESH AND STAPLE</a>
            <a class="dropdown-item" href="@Url.Action("LaptopReportsDeploy2", "LaptopAllocations", new { id = "GENERAL MERCHANDISE" })">GENERAL MERCHANDISE</a>
            <a class="dropdown-item" href="@Url.Action("LaptopReportsDeploy2", "LaptopAllocations", new { id = "DEPARTMENT STORE" })">DEPARTMENT STORE</a>
            <a class="dropdown-item" href="@Url.Action("LaptopReportsDeploy2", "LaptopAllocations", new { id = "APPLIANCES AND FURNITURE" })">APPLIANCES AND FURNITURE</a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.TotalAvailableLaptop))
    {
        <p style="color: red; font-weight: bold;">@ViewBag.TotalAvailableLaptop</p>
    }

    @if (ViewBag.Id != null)
    {
        <div class="card shadow-sm card-selected">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.AllocId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Owner)
                                </th>
                                <th>
                                    DEPARTMENT
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LaptopAllocation.ComputerName)
                                </th>
                                <th>
                                    DESCRIPTION
                                </th>
                                <th>
                                    LAPTOP CODE
                                </th>
                                <th>
                                    PO
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SerialNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LaptopAllocation.FixedassetTag)
                                </th>
                                <th>
                                    DATE DEPLOYED
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SecAllocationStatus)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateCreated)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateUpdated)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Createdby)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Updatedby)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AllocId)
                                    </td>
                                    <td class="editbtn" id="@item.LaptopInventoryDetails.LaptopInventory.Description" id="userCode2" name="userCODE">
                                        @Html.DisplayFor(modelItem => item.Owner.OwnerCode)
                                    </td>
                                    <td class="editbtn" id="@item.LaptopInventoryDetails.LaptopInventory.Description" id="userCode2" name="userCODE" style="color: green; font-weight: bold;">
                                        @Html.DisplayFor(modelItem => item.Owner.Department.Dept_name)
                                    </td>
                                    <td class="editbtn" id="@item.LaptopInventoryDetails.LaptopInventory.Description" id="userCode2" name="userCODE">
                                        @Html.DisplayFor(modelItem => item.LaptopAllocation.ComputerName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.LaptopInventory.Description)
                                    </td>
                                    <td class="editbtn" id="@item.LaptopInventoryDetails.LaptopInventory.Description" id="userCode2" name="userCODE">
                                        @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.laptoptinvCode)
                                    </td>
                                    <td class="editbtn" id="@item.LaptopInventoryDetails.LaptopInventory.Description" id="userCode2" name="userCODE">
                                        @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.PO)
                                    </td>
                                    <td class="editbtn" id="@item.LaptopInventoryDetails.LaptopInventory.Description" id="userCode2" name="userCODE">
                                        @Html.DisplayFor(modelItem => item.SerialNumber)
                                    </td>
                                    <td class="editbtn" id="@item.LaptopInventoryDetails.LaptopInventory.Description" id="userCode2" name="userCODE">
                                        @Html.DisplayFor(modelItem => item.LaptopAllocation.FixedassetTag)
                                    </td>
                                    <td class="editbtn" id="@item.LaptopInventoryDetails.LaptopInventory.Description" id="userCode2" name="userCODE">
                                        @Html.DisplayFor(modelItem => item.LaptopAllocation.DateDeployed)
                                    </td>
                                    @if (item.SecAllocationStatus == "CO")
                                    {
                                        <td style="color: red; font-weight:bold;">
                                            @Html.DisplayFor(modelItem => item.Status.status_name)
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status.status_name)
                                        </td>
                                    }

                                    <td class="editbtn" id="@item.LaptopInventoryDetails.LaptopInventory.Description" id="userCode2" name="userCODE">
                                        @Html.DisplayFor(modelItem => item.DateCreated)
                                    </td>
                                    <td class="editbtn" id="@item.LaptopInventoryDetails.LaptopInventory.Description" id="userCode2" name="userCODE">
                                        @Html.DisplayFor(modelItem => item.DateUpdated)
                                    </td>
                                    <td class="editbtn" id="@item.LaptopInventoryDetails.LaptopInventory.Description" id="userCode2" name="userCODE">
                                        @Html.DisplayFor(modelItem => item.Createdby.UserFullName)
                                    </td>
                                    <td class="editbtn" id="@item.LaptopInventoryDetails.LaptopInventory.Description" id="userCode2" name="userCODE">
                                        @Html.DisplayFor(modelItem => item.Updatedby.UserFullName)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    }
    else
    {
        <p class="py-3">No laptops in this department are 4 years old yet!</p>
    }




</div> 