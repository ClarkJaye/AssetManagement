@model AssetManagement.Models.Module

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Module</h1>

<h4>Module</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ModuleId" />
            <div class="form-group">
                <label asp-for="ModuleTitle" class="control-label">Module Title</label>
                <input asp-for="ModuleTitle" class="form-control" />
                <span asp-validation-for="ModuleTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModuleStatus" class="control-label">Module Status</label>
                <select asp-for="ModuleStatus" class="form-control" asp-items="ViewBag.ModuleStatus"></select>
                <span asp-validation-for="ModuleStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModuleCategory" class="control-label">Module Category</label>
                <select asp-for="ModuleCategory" class="form-control" asp-items="ViewBag.ModuleCategory"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
