@model IEnumerable<AssetManagement.Models.BorrowedPeripherals>

@{
    ViewData["Title"] = "Index";
}


<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Chivo:wght@300;400;500;700&display=swap" />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18"></script>


@if (TempData["Welcome"] != null)
{
    <div class="toast-notification animated-toast">
        <p>@TempData["Welcome"]</p>
    </div>
}


<div class="table-container">

    <h4>Return Borrowed Peripheral </h4>

    <input type="text" id="filterInput" placeholder="Search...">
    <table class="table custom-fontsize p-4 ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LaptopPeripheral)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Owner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateBorrow)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remark)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateUpdated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserUpdated)
                </th>
     
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LaptopPeripheral.PeripheralDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner.OwnerCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateBorrow)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remark)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateUpdated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.status_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserCreated.UserCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserUpdated.UserCode)
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>


<script>

    //FILTERING

    $(document).ready(function () {
        $('#filterInput').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('tbody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });


        $(".btn-delt").click(function () {
            $(this).closest("form").submit();
        })
    });


</script>