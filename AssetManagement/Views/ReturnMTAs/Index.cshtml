@model IEnumerable<AssetManagement.Models.ReturnMTA>

@{
    ViewData["Title"] = "Index";
}


<div class="m-4 px-1">
    <h4>   Return Monitor Allocation</h4>
    @if (TempData["Welcome"] != null)
    {
        <p>@TempData["Welcome"]</p>
    }

    @if (@TempData["AlertMessage"] != null)
    {
        <div id="alertMessage" class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["AlertMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="d-flex align-items-center gap-3">
        <a id="createbtn" class="btn btn-theme createbtn" asp-controller="MonitorAllocations" asp-action="ReturnPartialView">
            <span class="fas fa-pencil-alt"></span> Return
        </a>
    </div>
</div>

<hr />

<div class="m-4">

    <div class="card shadow-sm card-selected">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-datatable">
                    <thead>
                        <tr>
                            <th>
                                DESCRIPTION
                            </th>
                            <th>
                                MONITOR CODE
                            </th>
                            <th>
                               SERIAL NUMBER
                            </th>
                            <th>
                                OWNER
                            </th>
                            <th>
                               RETURN TYPE
                            </th>
                            <th>
                                CREATED AT
                            </th>
                            <th>
                                CREATED BY
                            </th>
                            <th>
                                UPDATED AT
                            </th>
                            <th>
                                UPDATED BY
                            </th>
                            <th style="text-align: center!important;">ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MonitorAllocation.MonitorDetails.MonitorInventory.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MonitorAllocation.monitorCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MonitorAllocation.SerialNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MonitorAllocation.OwnerCode)
                                </td>
                                <td>
                                    @item.ReturnType.Description
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateCreated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserCreated.UserFullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateUpdated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserUpdated.UserFullName)
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center align-items-center">
                                        @if (item.ReturnType.Return_Inv != "N")
                                        {
                                            <a class="btn btn-outline-primary editbtn" asp-action="Edit" asp-route-id="@item.ReturnID">Edit</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



@if (TempData["SuccessNotification"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                title: 'Success',
                text: '@TempData["SuccessNotification"]',
                icon: 'success',
                timer: 3000, // Automatically close the notification after 3 seconds
                showConfirmButton: false
            });
        });
    </script>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $(".editbtn").click(function () {
            $(".createbtn").hide();
            var id = $(this).data("id");
            // Remove the 'highlighted-row' class from any other row
            $("tr.highlighted-row").removeClass("highlighted-row");

            // Add the 'highlighted-row' class to the clicked row
            $(this).closest("tr").addClass("highlighted-row");

            $.ajax({
                url: "@Url.Action("Edit", "ReturnMTAs")",
                type: "GET",
                data: { id: id },
                success: function (res) {
                    $(".createform").html(res);
                }
            })
        })
    })

</script>
