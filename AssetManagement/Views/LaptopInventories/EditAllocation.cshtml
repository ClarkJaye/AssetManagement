@model AssetManagement.Models.LaptopInventory

@{
    ViewData["Title"] = "Create";
}


<div class="m-4 px-1">
    <h4>Laptop Inventory</h4>
    @if (TempData["Welcome"] != null)
    {
        <p>@TempData["Welcome"]</p>
    }
</div>

@if (@TempData["AlertMessage"] != null)
{
    <div id="alertMessage" class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<hr />
<div class=" m-4">
    <div class="table-responsive">
        <table class="table">
            <tr class=" no-border">
                <td hidden>
                    <label asp-for="laptoptinvCode" class="control-label"></label>
                    @Model.laptoptinvCode
                </td>
                <td>
                    <label asp-for="Description" class="control-label"><b>Description :</b></label>
                    @Model.Description
                </td>
                <td>
                    <label asp-for="Quantity" class="control-label"><b>LTQuantity :</b></label>
                    @Model.Quantity
                </td>
                <td>
                    <label asp-for="AllocatedNo" class="control-label"><b>LTNoAlloc :</b></label>
                    @Model.AllocatedNo
                </td>
                <td>
                    <label asp-for="LTLevel" class="control-label"><b>LTLevel :</b></label>
                    @Model.Level.LevelDescription
                </td>
                <td>
                    <label asp-for="LTBrand" class="control-label"><b>LTBrand :</b></label>
                    @Model.Brand.BrandDescription
                </td>
                <td>
                    <label asp-for="LTModel" class="control-label"><b>LTModel :</b></label>
                    @Model.Model.ModelDescription
                </td>
                <td>
                    <label asp-for="LTcpu" class="control-label"><b>LTcpu :</b></label>
                    @Model.CPU.CPUDescription
                </td>
                <td>
                    <label asp-for="LTHardisk" class="control-label"><b>LTHardisk :</b></label>
                    @Model.HardDisk.HDDescription
                </td>
                <td>
                    <label asp-for="LTMemory" class="control-label"><b>LTMemory :</b></label>
                    @Model.Memory.MemoryDescription
                </td>
                <td>
                    <label asp-for="LTOS" class="control-label"><b>LTOS :</b></label>
                    @Model.OS.OSDescription
                </td>

            </tr>
        </table>
    </div>
    <hr />
    <div>
        <form asp-action="Edit">
            <div class="row form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-2">
                    <label asp-for="laptoptinvCode" class="control-label"></label>
                    <input readonly style="background-color: white;" asp-for="laptoptinvCode" class="form-control" />
                    <span asp-validation-for="laptoptinvCode" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2" id="leveltable">
                    <label asp-for="LTLevel" class="control-label"></label>
                    <input asp-for="LTLevel" asp-items="ViewBag.LTLevel" hidden class="form-control" id="levelid" />
                    <input class="form-select" id="leveldes" disabled placeholder="@Model.Level.LevelDescription" />
                </div>
                <div class="form-group col-md-2" id="brandtable">
                    <label asp-for="LTBrand" class="control-label"></label>
                    <input asp-for="LTBrand" class="form-control" id="brandid" hidden />
                    <input class="form-select" id="branddes" disabled placeholder="@Model.Brand.BrandDescription" />
                </div>
                <div class="form-group col-md-2" id="modeltable">
                    <label asp-for="LTModel" class="control-label"></label>
                    <input asp-for="LTModel" class="form-control" id="modelid" hidden />
                    <input class="form-select" id="modeldes" disabled placeholder="@Model.Model.ModelDescription" />
                </div>
                <div class="form-group col-md-2" id="cputable">
                    <label asp-for="LTcpu" class="control-label"></label>
                    <input asp-for="LTcpu" class="form-control" id="cpuid" hidden />
                    <input class="form-select" id="cpudes" disabled placeholder="@Model.CPU.CPUDescription" />
                </div>
                <div class="form-group col-md-2" id="harddisktable">
                    <label asp-for="LTHardisk" class="control-label"></label>
                    <input asp-for="LTHardisk" class="form-control" id="hdid" hidden />
                    <input class="form-select" id="hddes" disabled placeholder="@Model.HardDisk.HDDescription" />
                </div>
                <div class="form-group col-md-2" id="memorytable">
                    <label asp-for="LTMemory" class="control-label"></label>
                    <input asp-for="LTMemory" class="form-control" id="mid" hidden />
                    <input class="form-select" id="mdes" disabled placeholder=" @Model.Memory.MemoryDescription" />
                </div>
                <div class="form-group col-md-2" id="ostable">
                    <label asp-for="LTOS" class="control-label"></label>
                    <input asp-for="LTOS" class="form-control" id="osid" hidden />
                    <input class="form-select" id="osdes" disabled placeholder="@Model.OS.OSDescription" />
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="AllocatedNo" class="control-label"></label>
                    <input asp-for="AllocatedNo" class="form-control" />
                    <span asp-validation-for="AllocatedNo" class="text-danger"></span>
                </div>
                <div hidden class="form-group col-md-2">
                    <label asp-for="LTStatus" class="control-label"></label>
                    <select asp-for="LTStatus" class="form-control" asp-items="ViewBag.LTStatus"></select>
                </div>
                <div class="form-group col-md-2" hidden>
                    <label asp-for="LTCreated" class="control-label"></label>
                    <input asp-for="LTCreated" class="form-control" />
                </div>
                <div class="form-group col-md-2" hidden>
                    <label asp-for="DateCreated" class="control-label"></label>
                    <input asp-for="DateCreated" class="form-control" />
                </div>
                <div class="form-group col-md-2 mt-4">
                    <input type="submit" value="Save" class="btn btn-theme" />
                    <a class="btn btn-outline-secondary " asp-action="Index">Back to List</a>
                </div>

            </div>
        </form>
    </div>
</div>

<div class="displaytable">
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
