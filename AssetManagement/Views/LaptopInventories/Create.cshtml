@model AssetManagement.Models.LaptopInventory

@{
    ViewData["Title"] = "Create";
}
<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }

    .custom-fontsize {
        font-size: 11px;
    }


    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
    }



    /* Add this CSS to adjust the top margin of the layout container */
    .container {
        margin-top: 70px; /* Adjust this value according to your navbar height */
    }

</style>
<h4>Laptop  Inventory</h4>
<hr />
@{
    var alertMessage = TempData["AlertMessage"] as string;
    if (!string.IsNullOrEmpty(alertMessage))
    {
        <div id="alert" class="alert alert-danger alert-dismissible fade show" role="alert" style="background-color: #BF1E25; color: white;">
            @alertMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<script>
    $(document).ready(function () {
        // Close the alert after 6 seconds
        setTimeout(function () {
            $("#alert").alert("close");
        }, 5000);
    });
</script>

<div>
    <form asp-action="Create">
        <div class="row form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-2" hidden>
                <label asp-for="laptoptinvCode" class="control-label"></label>
                <input asp-for="laptoptinvCode" class="form-control" />
                <span asp-validation-for="laptoptinvCode" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-2" id="leveltable">
                <label asp-for="LTLevel" class="control-label"></label>
                <input asp-for="LTLevel" value="0" class="form-control" id="levelid" hidden  />
                <input class="form-control" id="leveldes" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2" id="brandtable">
                <label asp-for="LTBrand" class="control-label"></label>
                <input asp-for="LTBrand" value="0" class="form-control" id="brandid" hidden />
                <input class="form-control" id="branddes" readonly style="background-color: white;"  />
            </div>
            <div class="form-group col-2" id="modeltable">
                <label asp-for="LTModel" class="control-label"></label>
                <input asp-for="LTModel" value="0" class="form-control" id="modelid" hidden />
                <input class="form-control" id="modeldes" readonly style="background-color: white;"  />
            </div>
            <div class="form-group col-2" id="cputable">
                <label asp-for="LTcpu" class="control-label"></label>
                <input asp-for="LTcpu" value="0" class="form-control" id="cpuid" hidden />
                <input class="form-control" id="cpudes" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2" id="harddisktable">
                <label asp-for="LTHardisk" class="control-label"></label>
                <input asp-for="LTHardisk" value="0" class="form-control" id="hdid" hidden />
                <input class="form-control" id="hddes" readonly style="background-color: white;"  />
            </div>
            <div class="form-group col-2" id="memorytable">
                <label asp-for="LTMemory" class="control-label"></label>
                <input asp-for="LTMemory" value="0" class="form-control" id="mid" hidden />
                <input class="form-control" id="mdes" readonly style="background-color: white;"  />
            </div>
            <div class="form-group col-2" id="ostable">
                <label asp-for="LTOS" class="control-label"></label>
                <input asp-for="LTOS" value="0" class="form-control" id="osid" hidden  />
                <input class="form-control" id="osdes" readonly style="background-color: white;"  />
            </div>
             <div class="form-group col-2" hidden>
                <label asp-for="AllocatedNo" class="control-label"></label>
                <input asp-for="AllocatedNo" value="0" class="form-control" />
                <span asp-validation-for="AllocatedNo" class="text-danger"></span>
            </div>
            <div hidden class="form-group col-2">
                <label asp-for="LTStatus" class="control-label"></label>
                <select asp-for="LTStatus" class ="form-control" asp-items="ViewBag.LTStatus"></select>
            </div>
            <div class="form-group col-2" style="margin-top: 23px;"  >
                <input type="submit" value="Create" class="bg-success h5 text-white text-decoration-none p-2 btn createbtn" />
                <a class="btn btn-sm bg-secondary h5 text-white text-decoration-none p-2 btn createbtn" asp-action="Index">BACK</a>
            </div>
        </div>
    </form>
</div>
<div class="displaytable">
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
