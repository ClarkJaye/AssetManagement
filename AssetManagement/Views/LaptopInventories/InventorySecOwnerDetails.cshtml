@model IEnumerable<AssetManagement.Models.SecondOwnerAlloc>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Chivo:wght@300;400;500;700&display=swap" />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18"></script>
<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }

    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
        overflow: hidden;
    }

</style>
<h4>Second Owner Laptop Allocation</h4>

    <div class="table-container">
    <table class="table custom-fontsize ">
            <thead>
                <tr>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.SecAllocId)
                    </th>
                    <th>
                        ID
                    </th>
                    <th >
                       COMPUTER NAME
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Owner)
                    </th>
                    <th>PO</th>
                    <th>
                        SERIAL
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateUpdated)
                    </th>
                    <th >
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Createdby)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Updatedby)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.SecAllocId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LaptopAllocation.AllocId)
                        </td>
                        <td >
                            @Html.DisplayFor(modelItem => item.LaptopAllocation.ComputerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Owner.OwnerFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InventoryDetails.PO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LaptopAllocation.SerialNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateUpdated)
                        </td>
                        <td >
                            @Html.DisplayFor(modelItem => item.Status.status_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Createdby.UserCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Updatedby.UserCode)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

