@model IEnumerable<AssetManagement.Models.SecondOwnerAlloc>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<h4>Second Owner Laptop Allocation</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                DESCRIPTION
            </th>
            <th>CODE</th>
            <th>
                SERIAL
            </th>
            <th>
                ASSET TAG
            </th>
            <th>
                COMPUTER NAME
            </th>
            <th>PO</th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                DATE DEPLOYED
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                CREATED BY
            </th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.LaptopInventory.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.laptoptinvCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.SerialCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LaptopAllocation.FixedassetTag)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LaptopAllocation.ComputerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LaptopInventoryDetails.PO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner.OwnerFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LaptopAllocation.LaptopInventoryDetails.DeployedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.status_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Createdby.UserCode)
                    </td>
                </tr>
            }
        }

        else
        {
            <tr>
                <td colspan="12" class="text-center">
                    No data available.
                </td>
            </tr>
        }
    </tbody>
</table>
