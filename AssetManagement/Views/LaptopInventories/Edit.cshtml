@model AssetManagement.Models.LaptopInventory

@{
    ViewData["Title"] = "Edit Laptop";
}


<div class="m-4">
    <h4>Edit Laptop Inventory</h4>
    @if (TempData["Welcome"] != null)
    {
        <p>@TempData["Welcome"]</p>
    }

    @if (@TempData["AlertMessage"] != null)
    {
        <div id="alertMessage" class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["AlertMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <hr />
    <div class="table-responsive">
        <table class="table">
            <tr class=" no-border">
                <td hidden>
                    <label asp-for="laptoptinvCode" class="control-label"></label>
                    @Model.laptoptinvCode
                </td>
                <td>
                    <label asp-for="Description" class="control-label"><b>Description :</b></label>
                    @Model.Description
                </td>
                <td>
                    <label asp-for="Quantity" class="control-label"><b>LTQuantity :</b></label>
                    @Model.Quantity
                </td>
                <td>
                    <label asp-for="AllocatedNo" class="control-label"><b>LTNoAlloc :</b></label>
                    @Model.AllocatedNo
                </td>
                <td>
                    <label asp-for="LTLevel" class="control-label"><b>LTLevel :</b></label>
                    @Model.Level.LevelDescription
                </td>
                <td>
                    <label asp-for="LTBrand" class="control-label"><b>LTBrand :</b></label>
                    @Model.Brand.BrandDescription
                </td>
                <td>
                    <label asp-for="LTModel" class="control-label"><b>LTModel :</b></label>
                    @Model.Model.ModelDescription
                </td>
                <td>
                    <label asp-for="LTcpu" class="control-label"><b>LTcpu :</b></label>
                    @Model.CPU.CPUDescription
                </td>
                <td>
                    <label asp-for="LTHardisk" class="control-label"><b>LTHardisk :</b></label>
                    @Model.HardDisk.HDDescription
                </td>
                <td>
                    <label asp-for="LTMemory" class="control-label"><b>LTMemory :</b></label>
                    @Model.Memory.MemoryDescription
                </td>
                <td>
                    <label asp-for="LTOS" class="control-label"><b>LTOS :</b></label>
                    @Model.OS.OSDescription
                </td>

            </tr>
        </table>
    </div>
    <hr class="mt-2" />
    <div>
        <form asp-action="Edit">
            <div class="row form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-3 mb-4">
                    <label asp-for="laptoptinvCode" class="control-label"></label>
                    <input readonly style="background-color: white;" asp-for="laptoptinvCode" class="form-control" />
                    <span asp-validation-for="laptoptinvCode" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3 mb-3" id="leveltable">
                    <label asp-for="LTLevel" class="control-label"></label>
                    <input asp-for="LTLevel" asp-items="ViewBag.LTLevel" hidden class="form-control" id="levelid" />
                    <input class="form-select" id="leveldes" readonly placeholder="@Model.Level.LevelDescription" />
                </div>
                <div class="form-group col-md-3 mb-3" id="brandtable">
                    <label asp-for="LTBrand" class="control-label"></label>
                    <input asp-for="LTBrand" class="form-control" hidden id="brandid" />
                    <input class="form-select" id="branddes" readonly placeholder="@Model.Brand.BrandDescription" />
                </div>
                <div class="form-group col-md-3 mb-3" id="modeltable">
                    <label asp-for="LTModel" class="control-label"></label>
                    <input asp-for="LTModel" class="form-control" hidden id="modelid" />
                    <input class="form-select" id="modeldes" readonly placeholder="@Model.Model.ModelDescription" />
                </div>
                <div class="form-group col-md-3 mb-3" id="cputable">
                    <label asp-for="LTcpu" class="control-label"></label>
                    <input asp-for="LTcpu" class="form-control" hidden id="cpuid" />
                    <input class="form-select" id="cpudes" readonly placeholder="@Model.CPU.CPUDescription" />
                </div>
                <div class="form-group col-md-3 mb-3" id="harddisktable">
                    <label asp-for="LTHardisk" class="control-label"></label>
                    <input asp-for="LTHardisk" class="form-control" hidden id="hdid" />
                    <input class="form-select" id="hddes" readonly placeholder="@Model.HardDisk.HDDescription" />
                </div>
                <div class="form-group col-md-3 mb-3" id="memorytable">
                    <label asp-for="LTMemory" class="control-label"></label>
                    <input asp-for="LTMemory" class="form-control" hidden id="mid" />
                    <input class="form-select" id="mdes" readonly placeholder=" @Model.Memory.MemoryDescription" />
                </div>
                <div class="form-group col-md-3 mb-3" id="ostable">
                    <label asp-for="LTOS" class="control-label"></label>
                    <input asp-for="LTOS" class="form-control" hidden id="osid" />
                    <input class="form-select" id="osdes" readonly placeholder="@Model.OS.OSDescription" />
                </div>
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" readonly />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="AllocatedNo" class="control-label"></label>
                    <input asp-for="AllocatedNo" class="form-control" readonly />
                    <span asp-validation-for="AllocatedNo" class="text-danger"></span>
                </div>
                <div hidden class="form-group col-md-3 mb-3">
                    <label asp-for="LTStatus" class="control-label"></label>
                    <select asp-for="LTStatus" class="form-control" asp-items="ViewBag.LTStatus"></select>
                </div>
                <div class="form-group col-md-3 mb-3" hidden>
                    <label asp-for="LTCreated" class="control-label"></label>
                    <input asp-for="LTCreated" class="form-control" />
                </div>
                <div class="form-group col-md-3 mb-3" hidden>
                    <label asp-for="DateCreated" class="control-label"></label>
                    <input asp-for="DateCreated" class="form-control" />
                </div>
                <div class="d-flex align-items-end gap-3 mt-2">
                    <input type="submit" value="Save" class="btn btn-theme" />
                    <a class="btn btn-outline-secondary " asp-action="Index">Back to List</a>
                </div>

            </div>
        </form>
    </div>
    <div class="displaytable"></div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        $("#leveltable").click(function () {
            // $('#leveldes').val("select level below");
            $.ajax({
                url: "@Url.Action("LevelPartialView", "Levels")",
                type: "GET",
                success: function (res) {
                    $(".displaytable").html(res);
                }
            })
        })

        //BRAND
        $("#brandtable").click(function () {
            // $('#branddes').val("select brand below");
            $.ajax({
                url: "@Url.Action("BrandPartialView", "Brands")",
                type: "GET",
                success: function (res) {
                    $(".displaytable").html(res);
                }
            })
        })

        //Model
        $("#modeltable").click(function () {
            // $('#modeldes').val("select model below");
            $.ajax({
                url: "@Url.Action("ModelPartialView", "Modelss")",
                type: "GET",
                success: function (res) {
                    $(".displaytable").html(res);
                }
            })
        })

        //CPU
        $("#cputable").click(function () {
            // $('#cpudes').val("select cpu below");
            $.ajax({
                url: "@Url.Action("CPUPartialView", "CPUs")",
                type: "GET",
                success: function (res) {
                    $(".displaytable").html(res);
                }
            })
        })

        //Hardisk
        $("#harddisktable").click(function () {
            // $('#hddes').val("select hard disk below");
            $.ajax({
                url: "@Url.Action("HardDiskPartialView", "HardDisks")",
                type: "GET",
                success: function (res) {
                    $(".displaytable").html(res);
                }
            })
        })

        //Memory
        $("#memorytable").click(function () {
            // $('#mdes').val("select memory below");
            $.ajax({
                url: "@Url.Action("MemoryPartialView", "Memories")",
                type: "GET",
                success: function (res) {
                    $(".displaytable").html(res);
                }
            })
        })

        //OS
        $("#ostable").click(function () {
            // $('#osdes').val("select os below");
            $.ajax({
                url: "@Url.Action("OSPartialView", "OS")",
                type: "GET",
                success: function (res) {
                    $(".displaytable").html(res);
                }
            })
        })


    })

</script>