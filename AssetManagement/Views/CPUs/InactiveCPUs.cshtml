@model IEnumerable<AssetManagement.Models.CPU>

@{
    ViewData["Title"] = "Index";
}


<div class="mx-4">
    <h4>Inactive CPU</h4>
    <a class="btn btn-outline-secondary mb-3" asp-action="Index">Back to List</a>

    <div class="createform"></div>

    <div class="card shadow-sm card-selected">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-datatable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CPUDescription)
                            </th>
                            <th hidden>
                                @Html.DisplayNameFor(model => model.CPUStatus)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CPUCreatedBy)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CPUCreatedDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CPUUpdatedBy)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CPUUpdatedDate)
                            </th>
                            <th style="text-align: center!important;">ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CPUDescription)
                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.CPUStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CPUCreatedBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CPUCreatedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CPUUpdatedBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CPUUpdatedDate)
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center align-items-center">
                                        <a class="btn btn-sm bg-success text-white custom-fontsize btn-activate" asp-action="Activate" asp-route-id="@item.CPUId" data-id="@item.CPUId">Activate</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('.btn-activate').click(function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            $.ajax({
                url: '@Url.Action("Activate")',
                type: 'POST',
                data: { id: id },
                success: function () {
                    location.reload();
                },
                error: function () {
                    console.log('Error occurred while activating the module.');
                }
            });
        });
    });
</script>
