@model AssetManagement.Models.DesktopNewAlloc

@{
    ViewData["Title"] = "Create";
}

<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }

    .custom-fontsize {
        font-size: 11px;
    }


    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
    }



    /* Add this CSS to adjust the top margin of the layout container */
    .container {
        margin-top: 70px; /* Adjust this value according to your navbar height */
    }

</style>
@{
    var alertMessage = TempData["AlertMessage"] as string;
}

@if (!string.IsNullOrEmpty(alertMessage))
{
    <div class="alert alert-danger" style="background-color: #BF1E25; color:white;">
        @alertMessage
    </div>
}
<h4>Second Owner Allocation</h4>
<hr />
<div>

    <form asp-action="Create">
        <div class="row form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-2" hidden>
                <label asp-for="SecAllocId" class="control-label"></label>
                <input asp-for="SecAllocId" class="form-control" />
                <span asp-validation-for="SecAllocId" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="AllocId" class="control-label"></label>
                <input asp-for="AllocId" readonly value="@ViewBag.AllocId" class="form-control" style="background-color: white;" />
            </div>
            <div class="form-group col-2">
                <label asp-for="SecDesktopCode" class="control-label"></label>
                <input asp-for="SecDesktopCode" readonly value="@ViewBag.DesktopCode" class="form-control" style="background-color: white;" />
            </div>
            <div class="form-group col-2">
                <label asp-for="UnitTag" class="control-label"></label>
                <input asp-for="UnitTag" readonly value="@ViewBag.UnitTag" class="form-control" style="background-color: white;" />
            </div>

            <div class="form-group col-2" id="ownertable">
                <label asp-for="SecOwnerCode" class="control-label"></label>
                <input asp-for="SecOwnerCode" class="form-control" id="oid" hidden />
                <input class="form-control" id="odes" readonly style="background-color: white;" />
            </div>

            <div class="form-group col-2" hidden>
                <label asp-for="SecAllocationStatus" class="control-label"></label>
                <select asp-for="SecAllocationStatus" class="form-control" asp-items="ViewBag.SecAllocationStatus"></select>
            </div>
            <div class="form-group col-2" style="margin-top:23px;">
                <input type="submit" value="Create" class="btn bg-success text-white" />
                <a class="btn bg-secondary text-white " asp-action="DeskAllocPartialView" asp-controller="DesktopAllocations">BACK</a>
            </div>
        </div>
    </form>
</div>

<div class="displaytable"></div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<script>
    $(document).ready(function () {
        //OWNER

        $("#ownertable").click(function () {

            $('#oid').val(null);

            $('#odes').val(null);
            $.ajax({
                url: "@Url.Action("DesktopOwnerPartialView","Owners")",
                type: "GET",
                success: function (res) {
                    $(".displaytable").html(res);
                }
            })
        })



    })
</script>