@model IEnumerable<AssetManagement.Models.ReturnPeripheral>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }


    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
        overflow: hidden;
    }

    /* Add this CSS to adjust the top margin of the layout container */
    .container {
        margin-top: 70px; /* Adjust this value according to your navbar height */
    }
</style>
<h4 class="title">
    Return Peripheral 
</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LaptopPeripheralAllocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserUpdated)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LaptopPeripheralAllocation.PeripheralAllocationId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnType.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.status_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateUpdated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserCreated.UserCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserUpdated.UserCode)
                </td>
            </tr>
        }
    </tbody>
</table>

