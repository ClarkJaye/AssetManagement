@model AssetManagement.Models.DesktopInventoryDetail

@{
    ViewData["Title"] = "Create";
}


<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }

    .custom-fontsize {
        font-size: 11px;
    }


    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
        overflow: hidden;
    }



    /* Add this CSS to adjust the top margin of the layout container */
    .container {
        margin-top: 70px; /* Adjust this value according to your navbar height */
    }

</style>

<h4>Desktop Inventory Detail</h4>
<hr />
<div>
    <form asp-action="Create">
        <div class="row form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-2">
                <label asp-for="desktopInvCode" class="control-label"></label>
                <input value="@ViewBag.Code" readonly style="background-color: white;" asp-for="desktopInvCode" class="form-control" />
                <span asp-validation-for="desktopInvCode" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="unitTag" class="control-label"></label>
                <input asp-for="unitTag" class="form-control" />
                <span asp-validation-for="unitTag" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="PO" class="control-label"></label>
                <input asp-for="PO" class="form-control" />
                <span asp-validation-for="PO" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group col-2" id="vendortable">
                <label asp-for="DTDVendor" class="control-label"></label>
                <input asp-for="DTDVendor" value="0" class="form-control" id="vid" hidden />
                <input class="form-control" id="vname" readonly style="background-color: white;" />
            </div>
            <div class="form-group col-2">
                <label asp-for="PurchaseDate" class="control-label"> PURCHASE DATE</label>
                <input asp-for="PurchaseDate" class="form-control" />
                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group col-2" style="margin-top: 23px;">
                <input type="submit" value="Save" class="bg-success h5 text-white text-decoration-none p-2 btn createbtn" />
                <a class="btn btn-sm bg-secondary h5 text-white text-decoration-none p-2 btn createbtn" asp-controller="DesktopInventories" asp-action="Index">BACK</a>
            </div>
        </div>
    </form>
</div>


<div class="displaytable">
</div>

<script>
    $(document).ready(function () {

        //VENDOR
        $("#vendortable").click(function () {

            $('#vid').val(null);

            $('#vname').val(null);
            $.ajax({
                url: "@Url.Action("VendorsPartialView","Vendors")",
                type: "GET",
                success: function (res) {
                    $(".displaytable").html(res);
                }
            })
        })


    })

</script>