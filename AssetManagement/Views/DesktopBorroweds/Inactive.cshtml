@model IEnumerable<AssetManagement.Models.DesktopBorrowed>

@{
    ViewData["Title"] = "Index";
}

<div class="m-4 px-1">
    <h4>Inactive Borrowed Desktop</h4>
    @if (TempData["Welcome"] != null)
    {
        <p>@TempData["Welcome"]</p>
    }

    @if (@TempData["AlertMessage"] != null)
    {
        <div id="alertMessage" class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["AlertMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div>
        <a class="btn btn-outline-secondary" asp-action="Index">
            Back to List
        </a>
    </div>
</div>

<div class="m-4">
    <div class="table-responsive">
        <table class="table table-striped table-datatable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.InventoryDetails)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateBorrow)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Remark)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateUpdated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DesktopInventory)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Owner)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserUpdated)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.InventoryDetails.unitTag)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateBorrow)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remark)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateUpdated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DesktopInventory.desktopInvCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Owner.OwnerCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status.status_code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserCreated.UserCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserUpdated.UserCode)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>

    //FILTERING

    $(document).ready(function () {
        $('#filterInput').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('tbody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });


        $(".btn-delt").click(function () {
            $(this).closest("form").submit();
        })
    });


</script>
