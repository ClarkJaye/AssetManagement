@model IEnumerable<AssetManagement.Models.DesktopBorrowed>

@{
    ViewData["Title"] = "Index";
}

<div class="m-4 px-1">
    <h4>Returned Borrowed Desktop</h4>
    @if (TempData["Welcome"] != null)
    {
        <p>@TempData["Welcome"]</p>
    }

    @if (@TempData["AlertMessage"] != null)
    {
        <div id="alertMessage" class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["AlertMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div>
        <a class="btn btn-outline-secondary" asp-action="Index">
            Back to List
        </a>
    </div>
</div>

<div class="m-4">
    <div class="card shadow-sm card-selected">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-datatable">
                    <thead>
                        <tr>
                            <th>
                                UNIT ID
                            </th>
                            <th>
                                UNIT TAG
                            </th>
                            <th>
                                COMPUTER NAME
                            </th>
                            <th>
                                DEPARTMENT BORROWER
                            </th>
                            <th>
                                BORROWER NAME
                            </th>
                            <th>
                                DATE OF BORROWED
                            </th>
                            <th>
                                EXPECTED RETURN DATE
                            </th>
                            <th>
                                RETURN DATE
                            </th>
                            <th>
                                STATUS
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Remark)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateCreated)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnitID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnitTag)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ComputerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Department.Dept_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Owner.OwnerFullName)
                                </td>
                                <td>
                                    @item.DateBorrow.ToString("MMM dd yyyy h:mm tt")
                                </td>
                                <td>
                                    @item.Expected_return?.ToString("MMM dd yyyy h:mm tt")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Return_date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remark)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status.status_name)
                                </td>
                                <td>
                                    @item.DateCreated.ToString("MMM dd yyyy h:mm tt")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

