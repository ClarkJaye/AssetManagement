@model AssetManagement.Models.DeviceType

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}
<style>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }

    .form-control:focus {
        border-width: 2px;
        border-color: #BF1E25;
        box-shadow: none;
        border-radius: 13px;
    }



    body {
        font-family: 'Chivo', sans-serif;
        margin: 0;
        padding: 10px;
    }
</style>

<hr />
<div>
    <div>
        <form asp-action="Edit" class="row" id="edit-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DevtypeID" />
            <div class="form-group col-6">
                <label asp-for="DevtypeDescription" class="control-label"></label>
                <input asp-for="DevtypeDescription" class="form-control" />
                <span asp-validation-for="DevtypeDescription" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DevtypeStatus" class="control-label"></label>
                <input asp-for="DevtypeStatus" class="form-control" />
                <span asp-validation-for="DevtypeStatus" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DevtypeCreatedby" class="control-label"></label>
                <input asp-for="DevtypeCreatedby" class="form-control" />
                <span asp-validation-for="DevtypeCreatedby" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DevtypeUpdateby" class="control-label"></label>
                <input asp-for="DevtypeUpdateby" class="form-control" />
                <span asp-validation-for="DevtypeUpdateby" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DateUpdated" class="control-label"></label>
                <input asp-for="DateUpdated" class="form-control" />
                <span asp-validation-for="DateUpdated" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-2 col">
                <a asp-action="Index" class="btn btn-secondary text-start me-2">Back</a>
                <input type="submit" value="Save" class="btn bg-success text-white" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    $(document).ready(function () {
        $(".btn-save").click(function () {

            var formData = $("#edit-form").serialize();
            $.ajax({
                url: "@Url.Action("Edit","DeviceTypes")",
                type: "POST",
                data: { formData: formData },
                success: function (res) {
                    window.location.reload();
                }
            })
        })
    })
</script>